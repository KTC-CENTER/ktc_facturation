{% extends 'base.html.twig' %}

{% block title %}Modifier {{ client.name }} - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    {# En-tête #}
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Modifier le client</h1>
            <p class="text-gray-600">{{ client.name }}</p>
        </div>
        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-secondary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Retour
        </a>
    </div>

    {# Formulaire #}
    <div class="card">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {# Informations principales #}
                <div class="md:col-span-2">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Informations principales</h3>
                </div>
                
                <div class="md:col-span-2">
                    {{ form_row(form.name) }}
                </div>
                
                <div>
                    {{ form_row(form.email) }}
                </div>
                
                <div>
                    {{ form_row(form.phone) }}
                </div>
                
                {# Adresse #}
                <div class="md:col-span-2">
                    <h3 class="text-lg font-medium text-gray-900 mb-4 mt-4">Adresse</h3>
                </div>
                
                <div class="md:col-span-2">
                    {{ form_row(form.address) }}
                </div>
                
                <div>
                    {{ form_row(form.city) }}
                </div>
                
                <div>
                    {{ form_row(form.country) }}
                </div>
                
                {# Informations légales #}
                <div class="md:col-span-2">
                    <h3 class="text-lg font-medium text-gray-900 mb-4 mt-4">Informations légales</h3>
                </div>
                
                <div>
                    {{ form_row(form.taxId) }}
                </div>
                
                <div>
                    {{ form_row(form.rccm) }}
                </div>
                
                {# Contact #}
                <div class="md:col-span-2">
                    <h3 class="text-lg font-medium text-gray-900 mb-4 mt-4">Personne de contact</h3>
                </div>
                
                <div>
                    {{ form_row(form.contactPerson) }}
                </div>
                
                <div>
                    {{ form_row(form.contactPhone) }}
                </div>
                
                {# Notes #}
                <div class="md:col-span-2">
                    {{ form_row(form.notes) }}
                </div>
            </div>
            
            <div class="flex justify-end gap-4 pt-6 border-t">
                <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-secondary">Annuler</a>
                <button type="submit" class="btn btn-primary">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Enregistrer les modifications
                </button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
