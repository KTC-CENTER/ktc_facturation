{% extends 'base.html.twig' %}

{% block title %}Clients - KTC Invoice Pro{% endblock %}
{% block page_title %}Gestion des Clients{% endblock %}

{% block content %}
<div class="space-y-6">
    {# Header avec actions #}
    <div class="sm:flex sm:items-center sm:justify-between">
        <div>
            <h2 class="text-xl font-semibold text-gray-900">Liste des clients</h2>
            <p class="mt-1 text-sm text-gray-500">{{ clients.getTotalItemCount }} client(s) trouvé(s)</p>
        </div>
        {% if is_granted('ROLE_COMMERCIAL') %}
        <div class="mt-4 sm:mt-0">
            <a href="{{ path('app_client_new') }}" 
               class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-ktc-blue hover:bg-ktc-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ktc-blue">
                <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Nouveau client
            </a>
        </div>
        {% endif %}
    </div>

    {# Filtres #}
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label for="search" class="block text-sm font-medium text-gray-700">Rechercher</label>
                <input type="text" name="search" id="search" value="{{ search }}"
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-ktc-blue focus:border-ktc-blue sm:text-sm"
                       placeholder="Nom, email, téléphone...">
            </div>
            <div class="flex items-center">
                <input type="checkbox" name="archived" id="archived" value="1" {{ showArchived ? 'checked' : '' }}
                       class="h-4 w-4 text-ktc-blue focus:ring-ktc-blue border-gray-300 rounded">
                <label for="archived" class="ml-2 text-sm text-gray-700">Afficher les archivés</label>
            </div>
            <div class="flex gap-2">
                <button type="submit" 
                        class="px-4 py-2 bg-ktc-blue text-white rounded-md hover:bg-ktc-dark focus:outline-none focus:ring-2 focus:ring-ktc-blue">
                    Filtrer
                </button>
                <a href="{{ path('app_client_index') }}" 
                   class="px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200">
                    Réinitialiser
                </a>
            </div>
        </form>
    </div>

    {# Liste des clients #}
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Localisation</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Documents</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                    <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for client in clients %}
                <tr class="{{ client.isArchived ? 'bg-gray-50' : '' }} hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 h-10 w-10">
                                <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-ktc-blue">
                                    <span class="text-sm font-medium text-white">{{ client.name|first|upper }}</span>
                                </span>
                            </div>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900">
                                    <a href="{{ path('app_client_show', {id: client.id}) }}" class="hover:text-ktc-blue">
                                        {{ client.name }}
                                    </a>
                                </div>
                                {% if client.rccm %}
                                <div class="text-xs text-gray-500">RCCM: {{ client.rccm }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ client.email ?? '-' }}</div>
                        <div class="text-sm text-gray-500">{{ client.phone ?? '-' }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ client.city ?? '-' }}</div>
                        <div class="text-sm text-gray-500">{{ client.country }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">{{ client.documentsCount }} document(s)</div>
                        <div class="text-sm text-gray-500">{{ client.totalRevenue|number_format(0, ',', ' ') }} FCFA</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if client.isArchived %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                Archivé
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                Actif
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <div class="flex items-center justify-end gap-2">
                            <a href="{{ path('app_client_show', {id: client.id}) }}" 
                               class="text-ktc-blue hover:text-ktc-dark" title="Voir">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </a>
                            {% if is_granted('ROLE_COMMERCIAL') %}
                            <a href="{{ path('app_client_edit', {id: client.id}) }}" 
                               class="text-gray-500 hover:text-gray-700" title="Modifier">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <p class="mt-2">Aucun client trouvé</p>
                        {% if is_granted('ROLE_COMMERCIAL') %}
                        <a href="{{ path('app_client_new') }}" class="mt-2 inline-block text-ktc-blue hover:underline">
                            Créer votre premier client
                        </a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# Pagination #}
    {% if clients.getTotalItemCount > 15 %}
    <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 rounded-lg shadow">
        {{ knp_pagination_render(clients) }}
    </div>
    {% endif %}
</div>
{% endblock %}
