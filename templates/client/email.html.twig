{% extends 'base.html.twig' %}

{% block title %}Envoyer un email à {{ client.name }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto space-y-6">
    <div>
        <nav class="flex mb-2 text-sm text-gray-500">
            <a href="{{ path('app_client_index') }}" class="hover:text-blue-600">Clients</a>
            <span class="mx-2">/</span>
            <a href="{{ path('app_client_show', {id: client.id}) }}" class="hover:text-blue-600">{{ client.name }}</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900">Envoyer un email</span>
        </nav>
        <h1 class="text-2xl font-bold text-gray-900">Envoyer un email</h1>
        <p class="text-gray-600 mt-1">Envoyer un email à <strong>{{ client.name }}</strong> ({{ client.email }})</p>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" class="space-y-6">
                <div>
                    <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Sujet <span class="text-red-500">*</span></label>
                    <input type="text" name="subject" id="subject" required
                           class="block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                           placeholder="Objet de l'email">
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message <span class="text-red-500">*</span></label>
                    <textarea name="message" id="message" rows="10" required
                              class="block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm shadow-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                              placeholder="Votre message..."></textarea>
                    <p class="mt-1 text-xs text-gray-500">Le message sera envoyé sous forme d'email HTML professionnel.</p>
                </div>
                <div class="flex items-center justify-end space-x-4 pt-4 border-t">
                    <a href="{{ path('app_client_show', {id: client.id}) }}" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Envoyer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
