{% extends 'base.html.twig' %}

{% block title %}Produits & Services - {{ app_name }}{% endblock %}

{% block body %}
<div class="space-y-6">
    {# En-tête #}
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Produits & Services</h1>
            <p class="text-gray-600">Gérez votre catalogue de produits et services</p>
        </div>
        <div class="flex gap-2">
            <a href="{{ path('app_product_export') }}" class="btn btn-secondary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                Exporter
            </a>
            <a href="{{ path('app_product_new') }}" class="btn btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Nouveau produit
            </a>
        </div>
    </div>

    {# Filtres #}
    <div class="card">
        <div class="card-body">
            <form method="get" class="flex flex-col sm:flex-row gap-4">
                <div class="flex-1">
                    <input type="text" name="q" value="{{ app.request.query.get('q') }}" 
                           placeholder="Rechercher par nom, code..." 
                           class="form-input w-full">
                </div>
                <div>
                    <select name="type" class="form-select">
                        <option value="">Tous les types</option>
                        {% for key, label in types %}
                            <option value="{{ key }}" {{ app.request.query.get('type') == key ? 'selected' : '' }}>
                                {{ label }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <select name="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="active" {{ app.request.query.get('status') == 'active' ? 'selected' : '' }}>Actifs</option>
                        <option value="inactive" {{ app.request.query.get('status') == 'inactive' ? 'selected' : '' }}>Inactifs</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-secondary">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                </button>
            </form>
        </div>
    </div>

    {# Liste des produits #}
    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Prix unitaire</th>
                        <th>Unité</th>
                        <th>Statut</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% if products|length == 0 %}
                        <tr>
                            <td colspan="7" class="text-center text-gray-500 py-8">
                                Aucun produit trouvé
                            </td>
                        </tr>
                    {% else %}
                        {% for product in products %}
                            <tr>
                                <td class="font-mono text-sm">{{ product.code }}</td>
                                <td>
                                    <div class="font-medium">{{ product.name }}</div>
                                    {% if product.description %}
                                        <div class="text-sm text-gray-500 line-clamp-1">{{ product.description }}</div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if product.type == 'LOGICIEL' %}
                                        <span class="badge badge-info">Logiciel</span>
                                    {% elseif product.type == 'MATERIEL' %}
                                        <span class="badge badge-warning">Matériel</span>
                                    {% else %}
                                        <span class="badge badge-success">Service</span>
                                    {% endif %}
                                </td>
                                <td class="font-medium">
                                    {{ product.unitPriceFloat|number_format(0, ',', ' ') }} {{ default_currency }}
                                </td>
                                <td>{{ product.unit ?: '-' }}</td>
                                <td>
                                    {% if product.isActive %}
                                        <span class="badge badge-success">Actif</span>
                                    {% else %}
                                        <span class="badge badge-danger">Inactif</span>
                                    {% endif %}
                                </td>
                                <td class="text-right">
                                    <div class="flex justify-end gap-2">
                                        <a href="{{ path('app_product_show', {'id': product.id}) }}" 
                                           class="text-gray-600 hover:text-primary-600" title="Voir">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                        </a>
                                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" 
                                           class="text-gray-600 hover:text-primary-600" title="Modifier">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </a>
                                        <form action="{{ path('app_product_toggle', {'id': product.id}) }}" method="post" class="inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ product.id) }}">
                                            <button type="submit" class="text-gray-600 hover:text-warning-600" 
                                                    title="{{ product.isActive ? 'Désactiver' : 'Activer' }}">
                                                {% if product.isActive %}
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                                    </svg>
                                                {% else %}
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                    </svg>
                                                {% endif %}
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
        
        {# Pagination #}
        {% if products.haveToPaginate %}
            <div class="card-footer">
                {{ knp_pagination_render(products) }}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
