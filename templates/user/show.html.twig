{% extends 'base.html.twig' %}

{% block title %}{{ user.fullName }} - Utilisateur{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <nav class="text-sm text-gray-500 mb-2">
                <a href="{{ path('app_user_index') }}" class="hover:text-primary-600">Utilisateurs</a>
                <span class="mx-2">/</span>
                <span class="text-gray-700">{{ user.fullName }}</span>
            </nav>
            <h1 class="text-2xl font-bold text-gray-900">{{ user.fullName }}</h1>
        </div>
        <div class="flex items-center gap-3">
            <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
            {% if user != app.user %}
            <form action="{{ path('app_user_toggle', {id: user.id}) }}" method="POST" class="inline">
                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                <button type="submit" class="btn {{ user.isActive ? 'btn-warning' : 'btn-success' }}">
                    {{ user.isActive ? 'Désactiver' : 'Activer' }}
                </button>
            </form>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Informations principales -->
        <div class="lg:col-span-2 space-y-6">
            <div class="card">
                <div class="card-header flex items-center justify-between">
                    <h3 class="font-semibold text-gray-900">Informations</h3>
                    <span class="badge badge-{{ user.isActive ? 'success' : 'danger' }}">
                        {{ user.isActive ? 'Actif' : 'Inactif' }}
                    </span>
                </div>
                <div class="card-body">
                    <div class="flex items-start gap-6">
                        <div class="w-20 h-20 rounded-full bg-primary-100 flex items-center justify-center flex-shrink-0">
                            <span class="text-2xl font-medium text-primary-700">{{ user.initials }}</span>
                        </div>
                        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 flex-grow">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Prénom</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ user.firstName }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Nom</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ user.lastName }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Email</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    <a href="mailto:{{ user.email }}" class="text-primary-600 hover:text-primary-700">{{ user.email }}</a>
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Téléphone</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ user.phone ?: '-' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Rôle</dt>
                                <dd class="mt-1">
                                    <span class="badge badge-{{ user.mainRole == 'ROLE_SUPER_ADMIN' ? 'danger' : (user.mainRole == 'ROLE_ADMIN' ? 'warning' : (user.mainRole == 'ROLE_COMMERCIAL' ? 'info' : 'secondary')) }}">
                                        {{ user.mainRoleLabel }}
                                    </span>
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Dernière connexion</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    {{ user.lastLoginAt ? user.lastLoginAt|date('d/m/Y H:i') : 'Jamais' }}
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Activité récente -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Activité récente</h3>
                </div>
                <div class="card-body">
                    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                        <div class="text-center p-4 bg-gray-50 rounded-lg">
                            <div class="text-2xl font-bold text-primary-600">{{ user.proformas|length }}</div>
                            <div class="text-sm text-gray-500">Proformas créées</div>
                        </div>
                        <div class="text-center p-4 bg-gray-50 rounded-lg">
                            <div class="text-2xl font-bold text-success-600">{{ user.invoices|length }}</div>
                            <div class="text-sm text-gray-500">Factures créées</div>
                        </div>
                        <div class="text-center p-4 bg-gray-50 rounded-lg">
                            <div class="text-2xl font-bold text-info-600">{{ user.documentShares|length }}</div>
                            <div class="text-sm text-gray-500">Partages</div>
                        </div>
                        <div class="text-center p-4 bg-gray-50 rounded-lg">
                            <div class="text-2xl font-bold text-warning-600">
                                {{ user.invoices|filter(i => i.status == 'PAID')|length }}
                            </div>
                            <div class="text-sm text-gray-500">Factures payées</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Dates -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Dates</h3>
                </div>
                <div class="card-body space-y-3">
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Créé le</span>
                        <span class="text-sm text-gray-900">{{ user.createdAt|date('d/m/Y H:i') }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Modifié le</span>
                        <span class="text-sm text-gray-900">{{ user.updatedAt|date('d/m/Y H:i') }}</span>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Actions</h3>
                </div>
                <div class="card-body space-y-2">
                    <a href="{{ path('app_user_password', {id: user.id}) }}" class="btn btn-secondary w-full">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                        </svg>
                        Changer le mot de passe
                    </a>
                    
                    {% if user != app.user and user.mainRole != 'ROLE_SUPER_ADMIN' %}
                    <button type="button" class="btn btn-danger w-full" 
                            onclick="if(confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')) document.getElementById('delete-form').submit()">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Supprimer
                    </button>
                    <form id="delete-form" action="{{ path('app_user_delete', {id: user.id}) }}" method="POST" class="hidden">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
