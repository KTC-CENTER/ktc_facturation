{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Utilisateurs</h1>
            <p class="text-sm text-gray-500">Gérez les accès à l'application</p>
        </div>
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nouvel utilisateur
        </a>
    </div>

    <!-- Filtres -->
    <div class="card">
        <div class="card-body">
            <form method="GET" class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <div>
                    <input type="text" name="search" value="{{ app.request.query.get('search') }}" 
                           placeholder="Rechercher par nom ou email..." class="form-input">
                </div>
                <div>
                    <select name="role" class="form-select">
                        <option value="">Tous les rôles</option>
                        {% for value, label in roles %}
                            <option value="{{ value }}" {{ app.request.query.get('role') == value ? 'selected' }}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="flex gap-2">
                    <select name="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="active" {{ app.request.query.get('status') == 'active' ? 'selected' }}>Actifs</option>
                        <option value="inactive" {{ app.request.query.get('status') == 'inactive' ? 'selected' }}>Inactifs</option>
                    </select>
                    <button type="submit" class="btn btn-secondary">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Email</th>
                        <th>Rôle</th>
                        <th>Dernière connexion</th>
                        <th>Statut</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td>
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-primary-100 flex items-center justify-center">
                                    <span class="text-sm font-medium text-primary-700">{{ user.initials }}</span>
                                </div>
                                <div>
                                    <a href="{{ path('app_user_show', {id: user.id}) }}" class="font-medium text-gray-900 hover:text-primary-600">
                                        {{ user.fullName }}
                                    </a>
                                    {% if user.phone %}
                                        <p class="text-sm text-gray-500">{{ user.phone }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>
                            <span class="badge badge-{{ user.mainRole == 'ROLE_SUPER_ADMIN' ? 'danger' : (user.mainRole == 'ROLE_ADMIN' ? 'warning' : (user.mainRole == 'ROLE_COMMERCIAL' ? 'info' : 'secondary')) }}">
                                {{ user.mainRoleLabel }}
                            </span>
                        </td>
                        <td>
                            {% if user.lastLoginAt %}
                                {{ user.lastLoginAt|date('d/m/Y H:i') }}
                            {% else %}
                                <span class="text-gray-400">Jamais</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-{{ user.isActive ? 'success' : 'danger' }}">
                                {{ user.isActive ? 'Actif' : 'Inactif' }}
                            </span>
                        </td>
                        <td class="text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="{{ path('app_user_show', {id: user.id}) }}" class="text-gray-400 hover:text-gray-600" title="Voir">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                </a>
                                <a href="{{ path('app_user_edit', {id: user.id}) }}" class="text-gray-400 hover:text-gray-600" title="Modifier">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </a>
                                {% if user != app.user %}
                                <form action="{{ path('app_user_toggle', {id: user.id}) }}" method="POST" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                    <button type="submit" class="{{ user.isActive ? 'text-warning-600 hover:text-warning-700' : 'text-success-600 hover:text-success-700' }}" title="{{ user.isActive ? 'Désactiver' : 'Activer' }}">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            {% if user.isActive %}
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                            {% else %}
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            {% endif %}
                                        </svg>
                                    </button>
                                </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-8 text-gray-500">
                            Aucun utilisateur trouvé
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {% if users.totalItemCount > 10 %}
        <div class="card-footer">
            <div class="pagination">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
