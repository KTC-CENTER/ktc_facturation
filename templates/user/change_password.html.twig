{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe - {{ user.fullName }} - {{ app_name }}{% endblock %}

{% block content %}
<div class="max-w-xl mx-auto space-y-6">
    <!-- Header -->
    <div>
        <nav class="flex mb-2" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
                <li><a href="{{ path('app_user_index') }}" class="hover:text-primary-600">Utilisateurs</a></li>
                <li><span class="mx-2">/</span></li>
                <li><a href="{{ path('app_user_show', {id: user.id}) }}" class="hover:text-primary-600">{{ user.fullName }}</a></li>
                <li><span class="mx-2">/</span></li>
                <li class="text-gray-900">Mot de passe</li>
            </ol>
        </nav>
        <h1 class="text-2xl font-bold text-gray-900">Changer le mot de passe</h1>
        <p class="text-gray-600 mt-1">Définir un nouveau mot de passe pour {{ user.fullName }}</p>
    </div>

    <!-- Formulaire -->
    <div class="card">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div>
                {{ form_label(form.newPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.newPassword, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.newPassword) }}
                <p class="form-hint">Minimum 8 caractères</p>
            </div>
            
            <div>
                {{ form_label(form.confirmPassword, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.confirmPassword) }}
            </div>
            
            <div class="flex items-center justify-end space-x-4 pt-6 border-t">
                <a href="{{ path('app_user_show', {id: user.id}) }}" class="btn btn-secondary">Annuler</a>
                <button type="submit" class="btn btn-primary">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Changer le mot de passe
                </button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
