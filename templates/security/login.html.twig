{% extends 'base.html.twig' %}

{% block title %}Connexion - KTC Invoice Pro{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-ktc-dark to-ktc-blue py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="flex justify-center">
                <div class="h-20 w-20 rounded-full bg-white flex items-center justify-center shadow-lg">
                    <span class="text-3xl font-bold text-ktc-dark">KTC</span>
                </div>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-white">
                KTC-Invoice Pro
            </h2>
            <p class="mt-2 text-center text-sm text-ktc-light">
                Connectez-vous à votre compte
            </p>
        </div>
        
        {% if error %}
            <div class="rounded-md bg-red-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </h3>
                    </div>
                </div>
            </div>
        {% endif %}

        <form class="mt-8 space-y-6 bg-white rounded-lg shadow-xl p-8" method="post">
            <div class="space-y-4">
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Adresse email</label>
                    <input type="email" name="_username" id="email" value="{{ last_username }}" required 
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-ktc-blue focus:border-ktc-blue"
                           placeholder="votre@email.com">
                </div>
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                    <input type="password" name="_password" id="password" required 
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-ktc-blue focus:border-ktc-blue"
                           placeholder="••••••••">
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input type="checkbox" name="_remember_me" id="remember_me" 
                           class="h-4 w-4 text-ktc-blue focus:ring-ktc-blue border-gray-300 rounded">
                    <label for="remember_me" class="ml-2 block text-sm text-gray-900">
                        Se souvenir de moi
                    </label>
                </div>

                <div class="text-sm">
                    <a href="{{ path('app_forgot_password') }}" class="font-medium text-ktc-blue hover:text-ktc-dark">
                        Mot de passe oublié ?
                    </a>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div>
                <button type="submit" 
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-ktc-blue hover:bg-ktc-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ktc-blue transition-colors duration-200">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <svg class="h-5 w-5 text-ktc-light group-hover:text-white" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                    </span>
                    Se connecter
                </button>
            </div>
        </form>
        
        <p class="text-center text-sm text-ktc-light">
            &copy; {{ "now"|date("Y") }} KTC-Center Sarl. Tous droits réservés.
        </p>
    </div>
</div>
{% endblock %}
