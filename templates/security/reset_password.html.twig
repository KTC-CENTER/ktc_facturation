{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe - KTC Invoice Pro{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-ktc-dark to-ktc-blue py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="flex justify-center">
                <div class="h-20 w-20 rounded-full bg-white flex items-center justify-center shadow-lg">
                    <span class="text-3xl font-bold text-ktc-dark">KTC</span>
                </div>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-white">
                Nouveau mot de passe
            </h2>
            <p class="mt-2 text-center text-sm text-ktc-light">
                Entrez votre nouveau mot de passe
            </p>
        </div>

        <form class="mt-8 space-y-6 bg-white rounded-lg shadow-xl p-8" method="post">
            <div class="space-y-4">
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Nouveau mot de passe</label>
                    <input type="password" name="password" id="password" required minlength="8"
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-ktc-blue focus:border-ktc-blue"
                           placeholder="••••••••">
                    <p class="mt-1 text-xs text-gray-500">Minimum 8 caractères</p>
                </div>
                <div>
                    <label for="confirm_password" class="block text-sm font-medium text-gray-700">Confirmer le mot de passe</label>
                    <input type="password" name="confirm_password" id="confirm_password" required minlength="8"
                           class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-ktc-blue focus:border-ktc-blue"
                           placeholder="••••••••">
                </div>
            </div>

            <div>
                <button type="submit" 
                        class="w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-ktc-blue hover:bg-ktc-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ktc-blue transition-colors duration-200">
                    Réinitialiser le mot de passe
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
