<tr data-document-items-target="item">
    <td class="cursor-move text-gray-400">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
        </svg>
    </td>
    <td>
        {{ form_widget(item.product, {'attr': {'class': 'form-select text-sm', 'data-action': 'change->document-items#loadProduct'}}) }}
    </td>
    <td>
        {{ form_widget(item.designation, {'attr': {'class': 'form-input text-sm', 'placeholder': 'DÃ©signation'}}) }}
        {{ form_widget(item.description, {'attr': {'class': 'form-input text-sm mt-1 text-xs', 'placeholder': 'Description (optionnel)', 'rows': 2}}) }}
    </td>
    <td>
        {{ form_widget(item.quantity, {'attr': {'class': 'form-input text-sm text-right', 'data-action': 'input->document-items#calculateLineTotal'}}) }}
    </td>
    <td>
        {{ form_widget(item.unitPrice, {'attr': {'class': 'form-input text-sm text-right', 'data-action': 'input->document-items#calculateLineTotal'}}) }}
    </td>
    <td>
        {{ form_widget(item.discount, {'attr': {'class': 'form-input text-sm text-right', 'data-action': 'input->document-items#calculateLineTotal'}}) }}
    </td>
    <td class="text-right">
        <span class="font-medium line-total">0</span>
    </td>
    <td>
        <div class="flex items-center gap-1">
            <button type="button" class="text-gray-400 hover:text-primary-600" data-action="document-items#duplicateItem" title="Dupliquer">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
            </button>
            <button type="button" class="text-gray-400 hover:text-danger-600" data-action="document-items#removeItem" title="Supprimer">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
            </button>
        </div>
    </td>
</tr>
