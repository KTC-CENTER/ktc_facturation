<tr class="document-item border-b border-gray-100 hover:bg-gray-50" data-index="{{ index }}">
    <td class="cursor-move text-gray-400 px-2 py-3 align-top">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"/>
        </svg>
    </td>
    <td class="px-2 py-3 align-top" style="min-width: 200px;">
        {{ form_widget(item.product, {'attr': {'class': 'form-select text-sm product-select w-full', 'onchange': 'loadProduct(this)'}}) }}
        <p class="text-xs text-gray-400 mt-1">Ou saisir manuellement ↓</p>
    </td>
    <td class="px-2 py-3 align-top" style="min-width: 250px;">
        {{ form_widget(item.designation, {'attr': {'class': 'form-input text-sm designation-input w-full font-medium', 'placeholder': 'Désignation du produit/service'}}) }}
        {{ form_widget(item.description, {'attr': {'class': 'form-input text-xs mt-2 description-input w-full text-gray-500', 'placeholder': 'Description détaillée (optionnel)', 'rows': 2, 'style': 'resize: none;'}}) }}
    </td>
    <td class="px-2 py-3 align-top text-center" style="width: 90px;">
        {{ form_widget(item.quantity, {'attr': {'class': 'form-input text-sm text-center qty-input w-full', 'oninput': 'calcLine(this)', 'placeholder': '1', 'min': '0', 'step': '0.01'}}) }}
    </td>
    <td class="px-2 py-3 align-top text-right" style="width: 130px;">
        {{ form_widget(item.unitPrice, {'attr': {'class': 'form-input text-sm text-right price-input w-full', 'oninput': 'calcLine(this)', 'placeholder': '0'}}) }}
    </td>
    <td class="px-2 py-3 align-top text-center" style="width: 80px;">
        {{ form_widget(item.discount, {'attr': {'class': 'form-input text-sm text-center discount-input w-full', 'oninput': 'calcLine(this)', 'placeholder': '0', 'min': '0', 'max': '100'}}) }}
    </td>
    <td class="px-3 py-3 align-top text-right font-semibold text-gray-900" style="width: 120px;">
        <span class="line-total text-sm">0</span>
    </td>
    <td class="px-2 py-3 align-top" style="width: 70px;">
        <div class="flex items-center gap-1">
            <button type="button" class="p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors" onclick="duplicateItem(this)" title="Dupliquer cette ligne">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
            </button>
            <button type="button" class="p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded transition-colors" onclick="removeItem(this)" title="Supprimer cette ligne">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
            </button>
        </div>
    </td>
    {{ form_widget(item.sortOrder) }}
</tr>
