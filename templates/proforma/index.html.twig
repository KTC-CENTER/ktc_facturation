{% extends 'base.html.twig' %}

{% block title %}Proformas{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Proformas</h1>
            <p class="text-sm text-gray-500">Gérez vos devis et proformas</p>
        </div>
        <a href="{{ path('app_proforma_new') }}" class="btn btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nouvelle proforma
        </a>
    </div>

    <!-- Filtres -->
    <div class="card">
        <div class="card-body">
            <form method="GET" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
                <div>
                    <input type="text" name="search" value="{{ app.request.query.get('search') }}" 
                           placeholder="Rechercher..." class="form-input">
                </div>
                <div>
                    <select name="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        {% for value, label in statuses %}
                            <option value="{{ value }}" {{ app.request.query.get('status') == value ? 'selected' }}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <select name="client" class="form-select">
                        <option value="">Tous les clients</option>
                        {% for client in clients %}
                            <option value="{{ client.id }}" {{ app.request.query.get('client') == client.id ? 'selected' }}>{{ client.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <input type="date" name="date_from" value="{{ app.request.query.get('date_from') }}" 
                           class="form-input" placeholder="Date début">
                </div>
                <div class="flex gap-2">
                    <input type="date" name="date_to" value="{{ app.request.query.get('date_to') }}" 
                           class="form-input" placeholder="Date fin">
                    <button type="submit" class="btn btn-secondary">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Client</th>
                        <th>Objet</th>
                        <th class="text-right">Montant TTC</th>
                        <th>Date</th>
                        <th>Validité</th>
                        <th>Statut</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for proforma in proformas %}
                    <tr>
                        <td>
                            <a href="{{ path('app_proforma_show', {id: proforma.id}) }}" class="font-medium text-primary-600 hover:text-primary-700">
                                {{ proforma.reference }}
                            </a>
                            {% if proforma.invoice %}
                                <span class="ml-2 text-xs text-gray-500">
                                    → <a href="{{ path('app_invoice_show', {id: proforma.invoice.id}) }}" class="text-primary-600">{{ proforma.invoice.reference }}</a>
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_client_show', {id: proforma.client.id}) }}" class="text-gray-900 hover:text-primary-600">
                                {{ proforma.client.name }}
                            </a>
                        </td>
                        <td class="max-w-xs truncate">{{ proforma.object ?: '-' }}</td>
                        <td class="text-right font-medium">{{ proforma.totalTTC|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                        <td>{{ proforma.issueDate|date('d/m/Y') }}</td>
                        <td>
                            {% if proforma.isExpired %}
                                <span class="text-danger-600">Expiré</span>
                            {% else %}
                                {{ proforma.validUntil|date('d/m/Y') }}
                                <span class="text-xs text-gray-500">({{ proforma.daysUntilExpiry }}j)</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-{{ proforma.statusColor }}">
                                {{ proforma.statusLabel }}
                            </span>
                        </td>
                        <td class="text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="{{ path('app_proforma_show', {id: proforma.id}) }}" class="text-gray-400 hover:text-gray-600" title="Voir">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                </a>
                                <a href="{{ path('app_proforma_pdf', {id: proforma.id}) }}" class="text-gray-400 hover:text-gray-600" title="Télécharger PDF">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                </a>
                                {% if proforma.canBeEdited %}
                                <a href="{{ path('app_proforma_edit', {id: proforma.id}) }}" class="text-gray-400 hover:text-gray-600" title="Modifier">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </a>
                                {% endif %}
                                {% if proforma.canBeConverted %}
                                <form action="{{ path('app_proforma_convert', {id: proforma.id}) }}" method="POST" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('convert' ~ proforma.id) }}">
                                    <button type="submit" class="text-success-600 hover:text-success-700" title="Convertir en facture">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </button>
                                </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-8 text-gray-500">
                            Aucune proforma trouvée
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {% if proformas.totalItemCount > 10 %}
        <div class="card-footer">
            <div class="pagination">
                {{ knp_pagination_render(proformas) }}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
