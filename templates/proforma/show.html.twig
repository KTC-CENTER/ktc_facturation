{% extends 'base.html.twig' %}

{% block title %}{{ proforma.reference }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <nav class="text-sm text-gray-500 mb-2">
                <a href="{{ path('app_proforma_index') }}" class="hover:text-primary-600">Proformas</a>
                <span class="mx-2">/</span>
                <span class="text-gray-700">{{ proforma.reference }}</span>
            </nav>
            <h1 class="text-2xl font-bold text-gray-900">{{ proforma.reference }}</h1>
        </div>
        <div class="flex flex-wrap items-center gap-2">
            <a href="{{ path('app_proforma_preview', {id: proforma.id}) }}" target="_blank" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                Aperçu
            </a>
            <a href="{{ path('app_proforma_pdf', {id: proforma.id}) }}" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Télécharger PDF
            </a>
            <button type="button" class="btn btn-secondary" onclick="openShareModal()">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
                Partager
            </button>
            <!-- Envoi direct -->
            <div class="relative" x-data="{ open: false }">
                <button @click="open = !open" class="btn btn-info">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                    </svg>
                    Envoyer
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                </button>
                <div x-show="open" @click.away="open = false" x-cloak class="absolute right-0 mt-1 w-56 bg-white border rounded-lg shadow-lg z-20 py-1">
                    {% if proforma.client.email %}
                    <a href="{{ path('app_proforma_send_email', {id: proforma.id}) }}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Envoyer par Email
                    </a>
                    {% endif %}
                    {% if proforma.client.phone %}
                    <a href="https://wa.me/{{ proforma.client.phone|replace({' ': '', '-': '', '+': ''})|replace({'^0': '237'}) }}?text={{ ('Bonjour, veuillez trouver votre proforma ' ~ proforma.reference ~ ' via ce lien: ')|url_encode }}" target="_blank" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        <svg class="w-5 h-5 mr-3 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        Envoyer par WhatsApp
                    </a>
                    {% endif %}
                </div>
            </div>
            {% if proforma.canBeEdited %}
            <a href="{{ path('app_proforma_edit', {id: proforma.id}) }}" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Contenu principal -->
        <div class="lg:col-span-2 space-y-6">
            <!-- En-tête document -->
            <div class="card">
                <div class="card-body">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 mb-2">Client</h3>
                            <p class="font-semibold text-gray-900">{{ proforma.client.name }}</p>
                            {% if proforma.client.address %}
                                <p class="text-sm text-gray-600">{{ proforma.client.address }}</p>
                            {% endif %}
                            {% if proforma.client.city %}
                                <p class="text-sm text-gray-600">{{ proforma.client.city }}, {{ proforma.client.country }}</p>
                            {% endif %}
                            {% if proforma.client.email %}
                                <p class="text-sm text-gray-600">{{ proforma.client.email }}</p>
                            {% endif %}
                            {% if proforma.client.phone %}
                                <p class="text-sm text-gray-600">{{ proforma.client.phone }}</p>
                            {% endif %}
                        </div>
                        <div class="text-right">
                            <span class="badge badge-{{ proforma.statusColor }} badge-lg">
                                {{ proforma.statusLabel }}
                            </span>
                            {% if proforma.isExpired and proforma.status != 'INVOICED' %}
                                <p class="text-sm text-danger-600 mt-2">Expirée depuis {{ proforma.daysUntilExpiry|abs }} jours</p>
                            {% endif %}
                        </div>
                    </div>
                    
                    {% if proforma.object %}
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Objet</h3>
                        <p class="text-gray-900">{{ proforma.object }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Lignes -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Détail des lignes</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Désignation</th>
                                <th class="text-right">Qté</th>
                                <th class="text-right">Prix unit.</th>
                                <th class="text-right">Remise</th>
                                <th class="text-right">Total HT</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in proforma.items %}
                            <tr>
                                <td>
                                    <div class="font-medium text-gray-900">{{ item.designation }}</div>
                                    {% if item.description %}
                                        <div class="text-sm text-gray-500">{{ item.description|nl2br }}</div>
                                    {% endif %}
                                    {% if item.product %}
                                        <span class="text-xs text-gray-400">[{{ item.product.code }}]</span>
                                    {% endif %}
                                </td>
                                <td class="text-right">{{ item.quantityFloat|number_format(2, ',', ' ') }}</td>
                                <td class="text-right">{{ item.unitPriceFloat|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                                <td class="text-right">{{ item.discountFloat > 0 ? item.discountFloat ~ '%' : '-' }}</td>
                                <td class="text-right font-medium">{{ item.total|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="4" class="text-right font-medium">Total HT</td>
                                <td class="text-right font-medium">{{ proforma.totalHT|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-right font-medium">TVA ({{ proforma.taxRateFloat }}%)</td>
                                <td class="text-right font-medium">{{ proforma.totalTVA|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            <tr class="text-lg">
                                <td colspan="4" class="text-right font-bold">Total TTC</td>
                                <td class="text-right font-bold text-primary-600">{{ proforma.totalTTC|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Notes et conditions -->
            {% if proforma.notes or proforma.conditions %}
            <div class="card">
                <div class="card-body space-y-4">
                    {% if proforma.notes %}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Notes</h3>
                        <p class="text-sm text-gray-900">{{ proforma.notes|nl2br }}</p>
                    </div>
                    {% endif %}
                    {% if proforma.conditions %}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Conditions</h3>
                        <p class="text-sm text-gray-900">{{ proforma.conditions|nl2br }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Informations -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Informations</h3>
                </div>
                <div class="card-body space-y-3">
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Date d'émission</span>
                        <span class="text-sm font-medium">{{ proforma.issueDate|date('d/m/Y') }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Validité</span>
                        <span class="text-sm font-medium {{ proforma.isExpired ? 'text-danger-600' : '' }}">
                            {{ proforma.validUntil|date('d/m/Y') }}
                        </span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Créée par</span>
                        <span class="text-sm font-medium">{{ proforma.createdBy.fullName }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Créée le</span>
                        <span class="text-sm">{{ proforma.createdAt|date('d/m/Y H:i') }}</span>
                    </div>
                    {% if proforma.updatedAt != proforma.createdAt %}
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Modifiée le</span>
                        <span class="text-sm">{{ proforma.updatedAt|date('d/m/Y H:i') }}</span>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Facture liée -->
            {% if proforma.invoice %}
            <div class="card border-success-200 bg-success-50">
                <div class="card-header">
                    <h3 class="font-semibold text-success-800">Facture générée</h3>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_invoice_show', {id: proforma.invoice.id}) }}" class="text-success-700 hover:text-success-800 font-medium">
                        {{ proforma.invoice.reference }}
                    </a>
                    <p class="text-sm text-success-600 mt-1">
                        <span class="badge badge-{{ proforma.invoice.statusColor }}">{{ proforma.invoice.statusLabel }}</span>
                    </p>
                </div>
            </div>
            {% endif %}

            <!-- Changer le statut -->
            {% if not proforma.invoice %}
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Changer le statut</h3>
                </div>
                <div class="card-body space-y-2">
                    {% for status, label in statuses %}
                        {% if status != proforma.status and status != 'INVOICED' %}
                        <form action="{{ path('app_proforma_status', {id: proforma.id, status: status}) }}" method="POST">
                            <input type="hidden" name="_token" value="{{ csrf_token('status' ~ proforma.id) }}">
                            <button type="submit" class="btn btn-secondary w-full text-sm">
                                {{ label }}
                            </button>
                        </form>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Actions</h3>
                </div>
                <div class="card-body space-y-2">
                    {% if proforma.canBeConverted %}
                    <form action="{{ path('app_proforma_convert', {id: proforma.id}) }}" method="POST">
                        <input type="hidden" name="_token" value="{{ csrf_token('convert' ~ proforma.id) }}">
                        <button type="submit" class="btn btn-success w-full">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Convertir en facture
                        </button>
                    </form>
                    {% endif %}
                    
                    <a href="{{ path('app_proforma_duplicate', {id: proforma.id}) }}" class="btn btn-secondary w-full">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                        </svg>
                        Dupliquer
                    </a>
                    
                    {% if not proforma.invoice %}
                    <button type="button" class="btn btn-danger w-full" 
                            onclick="if(confirm('Êtes-vous sûr de vouloir supprimer cette proforma ?')) document.getElementById('delete-form').submit()">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Supprimer
                    </button>
                    <form id="delete-form" action="{{ path('app_proforma_delete', {id: proforma.id}) }}" method="POST" class="hidden">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proforma.id) }}">
                    </form>
                    {% endif %}
                </div>
            </div>

            <!-- Partages -->
            {% if shares|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Partages actifs</h3>
                </div>
                <div class="card-body">
                    <ul class="space-y-2">
                        {% for share in shares %}
                        <li class="flex items-center justify-between text-sm">
                            <div>
                                <span class="badge badge-info">{{ share.shareTypeLabel }}</span>
                                {% if share.recipientEmail %}
                                    <span class="text-gray-600">{{ share.recipientEmail }}</span>
                                {% endif %}
                            </div>
                            <form action="{{ path('app_share_revoke', {id: share.id}) }}" method="POST" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('revoke' ~ share.id) }}">
                                <button type="submit" class="text-danger-600 hover:text-danger-700" title="Révoquer">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                    </svg>
                                </button>
                            </form>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Modal de partage -->
<div id="share-modal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-black opacity-50" onclick="closeModal()"></div>
        <div class="relative bg-white rounded-lg shadow-xl max-w-md w-full p-6">
            <h3 class="text-lg font-semibold mb-4">Partager la proforma</h3>
            <div id="share-modal-content">
                <!-- Contenu chargé via AJAX -->
            </div>
        </div>
    </div>
</div>

<script>
function openShareModal() {
    fetch('{{ path('app_share_modal', {type: 'proforma', id: proforma.id}) }}')
        .then(response => response.text())
        .then(html => {
            document.getElementById('share-modal-content').innerHTML = html;
            document.getElementById('share-modal').classList.remove('hidden');
        });
}
function closeModal() {
    document.getElementById('share-modal').classList.add('hidden');
}
</script>
{% endblock %}
