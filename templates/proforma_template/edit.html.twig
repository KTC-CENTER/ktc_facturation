{% extends 'base.html.twig' %}

{% block title %}Modifier {{ template.name }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto space-y-6">
    <div>
        <nav class="text-sm text-gray-500 mb-2">
            <a href="{{ path('app_proforma_template_index') }}" class="hover:text-blue-600">Modèles</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900">{{ template.name }}</span>
        </nav>
        <h1 class="text-2xl font-bold text-gray-900">Modifier le modèle</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" class="space-y-6">
                <div>
                    <label for="name" class="form-label">Nom du modèle <span class="text-red-500">*</span></label>
                    <input type="text" name="name" id="name" required class="form-input" value="{{ template.name }}">
                </div>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" id="description" rows="2" class="form-textarea">{{ template.description }}</textarea>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="validityDays" class="form-label">Validité (jours)</label>
                        <input type="number" name="validityDays" id="validityDays" value="{{ template.validityDays }}" min="1" class="form-input">
                    </div>
                    <div>
                        <label for="taxRate" class="form-label">Taux TVA (%)</label>
                        <input type="number" name="taxRate" id="taxRate" value="{{ template.taxRateFloat }}" step="0.01" class="form-input">
                    </div>
                </div>
                <div>
                    <label for="conditions" class="form-label">Conditions</label>
                    <textarea name="conditions" id="conditions" rows="4" class="form-textarea">{{ template.conditions }}</textarea>
                </div>
                <div class="flex justify-between pt-4 border-t">
                    <form method="post" action="{{ path('app_proforma_template_delete', {id: template.id}) }}" onsubmit="return confirm('Supprimer ce modèle ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ template.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                    <div class="flex gap-3">
                        <a href="{{ path('app_proforma_template_index') }}" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
