<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Proforma {{ proforma.reference }}</title>
    <style>
        @page {
            margin: 15mm 15mm 18mm 15mm;
            size: A4;
        }
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'DejaVu Sans', Helvetica, Arial, sans-serif;
            font-size: 9pt;
            color: #333;
            line-height: 1.25;
            margin: 25px;
        }

        /* HEADER */
        .header {
            display: table;
            width: 100%;
            margin-bottom: 8px;
        }
        
        .header-left {
            display: table-cell;
            width: 50%;
            vertical-align: top;
        }
        
        .header-right {
            display: table-cell;
            width: 50%;
            vertical-align: top;
            text-align: right;
        }
        
        .logo { max-height: 50px; max-width: 140px; }
        
        .company-text { font-size: 14pt; font-weight: bold; color: #5B8BA0; }
        
        .slogan { font-size: 7pt; color: #5B8BA0; font-style: italic; margin-top: 2px; }
        
        .doc-type { font-size: 12pt; font-weight: bold; color: #8B6914; }
        
        .doc-meta { font-size: 8pt; color: #444; margin-top: 4px; line-height: 1.4; }

        /* PARTIES */
        .parties {
            display: table;
            width: 100%;
            margin: 8px 0;
        }
        
        .party-left, .party-right {
            display: table-cell;
            width: 48%;
            vertical-align: top;
        }
        
        .party-spacer { display: table-cell; width: 4%; }
        
        .party-label { font-size: 7pt; color: #666; margin-bottom: 2px; }
        
        .emetteur-box {
            border: 1px solid #5B8BA0;
            border-radius: 3px;
            padding: 6px 8px;
        }
        
        .emetteur-name { font-size: 9pt; font-weight: bold; color: #333; margin-bottom: 3px; }
        
        .emetteur-details { font-size: 7.5pt; color: #444; line-height: 1.35; }
        
        .client-name { font-size: 10pt; font-weight: bold; color: #5B8BA0; margin-top: 3px; }
        
        .client-details { font-size: 8pt; color: #444; margin-top: 3px; line-height: 1.35; }

        /* OBJECT */
        .object-banner {
            background: #5B8BA0;
            color: #fff;
            text-align: center;
            padding: 6px 10px;
            margin: 8px 0;
        }
        
        .object-text { font-size: 9pt; font-weight: bold; }

        /* TABLE */
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 6px;
        }
        
        .items-table th {
            background: #5B8BA0;
            color: #fff;
            font-size: 7.5pt;
            font-weight: bold;
            padding: 5px 4px;
            text-align: center;
            border: 1px solid #4A7A90;
        }
        
        .items-table th:first-child { text-align: left; padding-left: 6px; }
        
        .items-table td {
            padding: 5px 4px;
            font-size: 8pt;
            border: 1px solid #ccc;
            vertical-align: top;
        }
        
        .items-table tbody tr:nth-child(even) { background: #f9f9f9; }
        
        .col-designation { width: 24%; font-weight: bold; padding-left: 6px !important; }
        .col-caracteristiques { width: 36%; font-size: 7pt; }
        .col-qte { width: 8%; text-align: center; }
        .col-pu { width: 16%; text-align: right; font-size: 7.5pt; }
        .col-pt { width: 16%; text-align: right; font-size: 7.5pt; }
        
        .total-row td {
            background: #5B8BA0 !important;
            color: #fff !important;
            font-weight: bold;
            font-size: 8pt;
            padding: 6px 4px;
        }

        /* AMOUNT */
        .amount-section {
            margin: 8px 0;
            font-size: 8pt;
            font-style: italic;
        }
        
        .amount-value { font-weight: bold; text-decoration: underline; }

        /* CONDITIONS */
        .conditions-section {
            margin: 8px 0;
        }
        
        .conditions-title { font-weight: bold; text-decoration: underline; margin-bottom: 3px; font-size: 8pt; }
        
        .conditions-list { font-size: 7.5pt; font-style: italic; padding-left: 8px; }
        .conditions-list p { margin: 2px 0; }
        .conditions-list p:before { content: "- "; }

        /* SIGNATURES */
        .signatures { display: table; width: 100%; margin-top: 15px; }
        
        .sig-left { display: table-cell; width: 55%; vertical-align: top; }
        .sig-right { display: table-cell; width: 45%; vertical-align: top; text-align: center; }
        
        .sig-label { font-size: 7.5pt; margin-bottom: 5px; }
        .sig-title { font-weight: bold; font-size: 8pt; margin-bottom: 5px; }
        
        .sig-box { border: 1px solid #666; height: 50px; }
        .sig-right .sig-box { width: 70%; margin: 0 auto; }

        /* FOOTER */
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            text-align: center;
            padding: 5px 15mm;
            border-top: 1px solid #5B8BA0;
            font-size: 7pt;
        }
        
        .footer-company { font-weight: bold; color: #5B8BA0; }
        .footer-legal { font-size: 6pt; color: #666; margin-top: 1px; }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="header">
        <div class="header-left">
            {% if logo_base64 %}
                <img src="{{ logo_base64 }}" alt="Logo" class="logo">
            {% else %}
                <div class="company-text">{{ settings.companyName ?? 'KTC-Center' }}</div>
            {% endif %}
            <div class="slogan">{{ settings.slogan ?? 'Nouvelle Vision de l\'Informatique' }}</div>
        </div>
        <div class="header-right">
            <div class="doc-type">Proposition commerciale</div>
            <div class="doc-meta">
                Réf. : {{ proforma.reference }}<br>
                Date : {{ proforma.issueDate|date('d/m/Y') }}<br>
                Validité : {{ proforma.validUntil|date('d/m/Y') }}
            </div>
        </div>
    </div>

    <!-- PARTIES -->
    <div class="parties">
        <div class="party-left">
            <div class="party-label">Émetteur:</div>
            <div class="emetteur-box">
                <div class="emetteur-name">{{ settings.companyName ?? 'KTC-Center Sarl' }}</div>
                <div class="emetteur-details">
                    {% if settings.address %}{{ settings.address }}<br>{% endif %}
                    {% if settings.postalCode %}BP : {{ settings.postalCode }} {% endif %}{{ settings.city ?? 'Yaoundé' }}<br>
                    {% if settings.phone %}Tél.: {{ settings.phone }}{% if settings.phone2 %} / {{ settings.phone2 }}{% endif %}<br>{% endif %}
                    {% if settings.email %}{{ settings.email }}{% endif %}
                </div>
            </div>
        </div>
        <div class="party-spacer"></div>
        <div class="party-right">
            <div class="party-label">Adressé à :</div>
            <div class="client-name">{{ proforma.client.name }}</div>
            <div class="client-details">
                {% if proforma.client.address %}{{ proforma.client.address }}<br>{% endif %}
                {% if proforma.client.phone %}Tel : {{ proforma.client.phone }}{% endif %}
            </div>
        </div>
    </div>

    <!-- OBJECT -->
    {% if proforma.object %}
    <div class="object-banner">
        <div class="object-text">{{ proforma.object|upper }}</div>
    </div>
    {% endif %}

    <!-- TABLE -->
    <table class="items-table">
        <thead>
            <tr>
                <th class="col-designation">Désignation</th>
                <th class="col-caracteristiques">Caractéristiques</th>
                <th class="col-qte">Qté</th>
                <th class="col-pu">P.U</th>
                <th class="col-pt">P.T</th>
            </tr>
        </thead>
        <tbody>
            {% for item in proforma.items %}
            <tr>
                <td class="col-designation">{{ item.designation }}</td>
                <td class="col-caracteristiques">{{ item.description ?? '' }}</td>
                <td class="col-qte">{{ item.quantityFloat|number_format(0, ',', ' ') }}</td>
                <td class="col-pu">{{ item.unitPriceFloat|number_format(0, ' ', ' ') }}</td>
                <td class="col-pt">{% if item.totalFloat > 0 %}{{ item.totalFloat|number_format(0, ' ', ' ') }}{% endif %}</td>
            </tr>
            {% endfor %}
            <tr class="total-row">
                <td colspan="4" style="text-align: right; padding-right: 8px;">Total</td>
                <td class="col-pt">{{ proforma.totalTTCFloat|number_format(0, ' ', ' ') }} FCFA</td>
            </tr>
        </tbody>
    </table>

    <!-- AMOUNT -->
    <div class="amount-section">
        Arrêté à : <span class="amount-value">{{ proforma.amountInWords ?? (proforma.totalTTCFloat|number_format(0, ' ', ' ') ~ ' FCFA') }}</span>
    </div>

    <!-- CONDITIONS -->
    {% if proforma.conditions %}
    <div class="conditions-section">
        <div class="conditions-title">NB :</div>
        <div class="conditions-list">
            {% for line in proforma.conditions|split("\n") %}
                {% if line|trim %}<p>{{ line|trim }}</p>{% endif %}
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- SIGNATURES -->
    <div class="signatures">
        <div class="sig-left">
            <div class="sig-label">Cachet, Date, Signature et mention ''Bon pour accord''</div>
            <div class="sig-box"></div>
        </div>
        <div class="sig-right">
            <div class="sig-title">La Direction</div>
            <div class="sig-box"></div>
        </div>
    </div>

    <!-- FOOTER -->
    <div class="footer">
        <div class="footer-company">{{ settings.companyName ?? 'Kamer Training and Consulting Center Sarl' }}</div>
        <div class="footer-legal">
            {% if settings.rccm %}N° RCCM: {{ settings.rccm }}{% endif %}
            {% if settings.legalInfo %} {{ settings.legalInfo }}{% endif %}
        </div>
    </div>
</body>
</html>
