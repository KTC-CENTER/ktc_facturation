{% extends 'base.html.twig' %}

{% block title %}Factures impay√©es - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Factures impay√©es</h1>
            <p class="text-sm text-gray-500">{{ invoices.totalItemCount }} facture{{ invoices.totalItemCount > 1 ? 's' : '' }} en attente de paiement</p>
        </div>
        <a href="{{ path('app_report_index') }}" class="btn btn-secondary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
            Rapports
        </a>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead><tr><th>R√©f√©rence</th><th>Client</th><th>√âmission</th><th>√âch√©ance</th><th>Statut</th><th class="text-right">Montant TTC</th><th></th></tr></thead>
                <tbody>
                    {% for i in invoices %}
                    <tr class="{{ i.status == 'OVERDUE' ? 'bg-red-50' : '' }}">
                        <td class="font-medium text-gray-900">{{ i.reference }}</td>
                        <td>{{ i.client.name }}</td>
                        <td class="text-sm text-gray-500">{{ i.issueDate|date('d/m/Y') }}</td>
                        <td class="text-sm {{ i.status == 'OVERDUE' ? 'text-red-600 font-semibold' : 'text-gray-500' }}">{{ i.dueDate ? i.dueDate|date('d/m/Y') : '-' }}</td>
                        <td><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-{{ i.statusColor }}-100 text-{{ i.statusColor }}-700">{{ i.statusLabel }}</span></td>
                        <td class="text-right font-semibold">{{ i.totalTTC|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                        <td class="text-right"><a href="{{ path('app_invoice_show', {id: i.id}) }}" class="text-blue-600 hover:text-blue-800 text-sm">Voir ‚Üí</a></td>
                    </tr>
                    {% else %}
                    <tr><td colspan="7" class="text-center py-8 text-emerald-600 font-medium">üéâ Aucune facture impay√©e !</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if invoices.totalItemCount > 20 %}
        <div class="card-footer"><div class="pagination">{{ knp_pagination_render(invoices) }}</div></div>
        {% endif %}
    </div>
</div>
{% endblock %}
