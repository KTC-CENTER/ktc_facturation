{% extends 'base.html.twig' %}

{% block title %}Rapport Proformas - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Proformas</h1>
            <p class="text-sm text-gray-500">{{ proformas.totalItemCount }} proforma{{ proformas.totalItemCount > 1 ? 's' : '' }} {{ currentStatus ? '(' ~ currentStatus ~ ')' : '' }}</p>
        </div>
        <div class="flex gap-2">
            <a href="{{ path('app_report_index') }}" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                Rapports
            </a>
            <a href="{{ path('app_proforma_new') }}" class="btn btn-primary">+ Nouvelle proforma</a>
        </div>
    </div>

    <!-- Filtres -->
    <div class="flex flex-wrap gap-2">
        <a href="{{ path('app_report_proformas') }}" class="px-3 py-1.5 rounded-full text-sm font-medium {{ not currentStatus ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' }}">Toutes</a>
        {% for status, label in {'DRAFT': 'Brouillon', 'SENT': 'Envoyée', 'ACCEPTED': 'Acceptée', 'REJECTED': 'Rejetée', 'EXPIRED': 'Expirée', 'CONVERTED': 'Convertie'} %}
            <a href="{{ path('app_report_proformas', {status: status}) }}" class="px-3 py-1.5 rounded-full text-sm font-medium {{ currentStatus == status ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' }}">{{ label }}</a>
        {% endfor %}
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead><tr><th>Référence</th><th>Client</th><th>Date</th><th>Statut</th><th class="text-right">Montant TTC</th><th></th></tr></thead>
                <tbody>
                    {% for p in proformas %}
                    <tr>
                        <td class="font-medium text-gray-900">{{ p.reference }}</td>
                        <td>{{ p.client.name }}</td>
                        <td class="text-sm text-gray-500">{{ p.issueDate|date('d/m/Y') }}</td>
                        <td><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-{{ p.statusColor }}-100 text-{{ p.statusColor }}-700">{{ p.statusLabel }}</span></td>
                        <td class="text-right font-semibold">{{ p.totalTTC|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                        <td class="text-right"><a href="{{ path('app_proforma_show', {id: p.id}) }}" class="text-blue-600 hover:text-blue-800 text-sm">Voir →</a></td>
                    </tr>
                    {% else %}
                    <tr><td colspan="6" class="text-center py-8 text-gray-400">Aucune proforma trouvée</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if proformas.totalItemCount > 20 %}
        <div class="card-footer"><div class="pagination">{{ knp_pagination_render(proformas) }}</div></div>
        {% endif %}
    </div>
</div>
{% endblock %}
