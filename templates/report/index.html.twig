{% extends 'base.html.twig' %}

{% block title %}Rapports - {{ app_name }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Rapports & Statistiques</h1>
        <p class="mt-1 text-sm text-gray-500">Vue d'ensemble de votre activité</p>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
        <a href="{{ path('app_report_revenue') }}" class="block bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl p-5 text-white shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-emerald-100 text-sm font-medium">CA Encaissé</p>
                    <p class="text-2xl font-bold mt-1">{{ totalRevenue|number_format(0, ',', ' ') }}</p>
                    <p class="text-emerald-200 text-xs mt-1">{{ default_currency }}</p>
                </div>
                <div class="bg-white/20 rounded-lg p-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                </div>
            </div>
        </a>

        <a href="{{ path('app_report_unpaid') }}" class="block bg-gradient-to-br from-amber-500 to-orange-500 rounded-xl p-5 text-white shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-amber-100 text-sm font-medium">CA En attente</p>
                    <p class="text-2xl font-bold mt-1">{{ totalPending|number_format(0, ',', ' ') }}</p>
                    <p class="text-amber-200 text-xs mt-1">{{ default_currency }}</p>
                </div>
                <div class="bg-white/20 rounded-lg p-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                </div>
            </div>
        </a>

        <a href="{{ path('app_report_invoices') }}" class="block bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-5 text-white shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-100 text-sm font-medium">Factures</p>
                    <p class="text-2xl font-bold mt-1">{{ totalInvoices }}</p>
                    <p class="text-blue-200 text-xs mt-1">Total créées</p>
                </div>
                <div class="bg-white/20 rounded-lg p-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                </div>
            </div>
        </a>

        <a href="{{ path('app_report_proformas') }}" class="block bg-gradient-to-br from-violet-500 to-purple-600 rounded-xl p-5 text-white shadow-lg hover:shadow-xl transition-all hover:-translate-y-0.5">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-violet-100 text-sm font-medium">Proformas</p>
                    <p class="text-2xl font-bold mt-1">{{ totalProformas }}</p>
                    <p class="text-violet-200 text-xs mt-1">Total créées</p>
                </div>
                <div class="bg-white/20 rounded-lg p-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
                </div>
            </div>
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Factures par statut -->
        <div class="card">
            <div class="card-header flex items-center justify-between">
                <h3 class="font-semibold text-gray-900">Factures par statut</h3>
                <a href="{{ path('app_report_invoices') }}" class="text-sm text-blue-600 hover:text-blue-800">Voir tout →</a>
            </div>
            <div class="card-body">
                {% if invoicesByStatus|length > 0 %}
                    <div class="space-y-3">
                        {% for item in invoicesByStatus %}
                            {% set statusColors = {
                                'DRAFT': 'gray', 'SENT': 'blue', 'PAID': 'emerald', 
                                'OVERDUE': 'red', 'CANCELLED': 'gray', 'PARTIAL': 'amber'
                            } %}
                            {% set statusLabels = {
                                'DRAFT': 'Brouillon', 'SENT': 'Envoyée', 'PAID': 'Payée',
                                'OVERDUE': 'En retard', 'CANCELLED': 'Annulée', 'PARTIAL': 'Partielle'
                            } %}
                            {% set color = statusColors[item.status]|default('gray') %}
                            <div class="flex items-center justify-between p-3 bg-{{ color }}-50 rounded-lg border border-{{ color }}-100">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-{{ color }}-100 text-{{ color }}-700">
                                        {{ statusLabels[item.status]|default(item.status) }}
                                    </span>
                                    <span class="text-sm text-gray-600">{{ item.count }} facture{{ item.count > 1 ? 's' : '' }}</span>
                                </div>
                                <span class="text-sm font-semibold text-gray-900">{{ item.total|number_format(0, ',', ' ') }} {{ default_currency }}</span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-400 text-center py-8">Aucune facture</p>
                {% endif %}
            </div>
        </div>

        <!-- Proformas par statut -->
        <div class="card">
            <div class="card-header flex items-center justify-between">
                <h3 class="font-semibold text-gray-900">Proformas par statut</h3>
                <a href="{{ path('app_report_proformas') }}" class="text-sm text-blue-600 hover:text-blue-800">Voir tout →</a>
            </div>
            <div class="card-body">
                {% if proformasByStatus|length > 0 %}
                    <div class="space-y-3">
                        {% for item in proformasByStatus %}
                            {% set statusColors = {
                                'DRAFT': 'gray', 'SENT': 'blue', 'ACCEPTED': 'emerald',
                                'REJECTED': 'red', 'EXPIRED': 'amber', 'CONVERTED': 'violet'
                            } %}
                            {% set statusLabels = {
                                'DRAFT': 'Brouillon', 'SENT': 'Envoyée', 'ACCEPTED': 'Acceptée',
                                'REJECTED': 'Rejetée', 'EXPIRED': 'Expirée', 'CONVERTED': 'Convertie'
                            } %}
                            {% set color = statusColors[item.status]|default('gray') %}
                            <div class="flex items-center justify-between p-3 bg-{{ color }}-50 rounded-lg border border-{{ color }}-100">
                                <div class="flex items-center gap-3">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-{{ color }}-100 text-{{ color }}-700">
                                        {{ statusLabels[item.status]|default(item.status) }}
                                    </span>
                                    <span class="text-sm text-gray-600">{{ item.count }} proforma{{ item.count > 1 ? 's' : '' }}</span>
                                </div>
                                <span class="text-sm font-semibold text-gray-900">{{ item.total|number_format(0, ',', ' ') }} {{ default_currency }}</span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-400 text-center py-8">Aucune proforma</p>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Top clients -->
    <div class="card">
        <div class="card-header flex items-center justify-between">
            <h3 class="font-semibold text-gray-900">Top 10 Clients par chiffre d'affaires</h3>
            <a href="{{ path('app_client_index') }}" class="text-sm text-blue-600 hover:text-blue-800">Tous les clients →</a>
        </div>
        <div class="card-body p-0">
            {% if topClients|length > 0 %}
                <table class="table">
                    <thead>
                        <tr>
                            <th class="w-10">#</th>
                            <th>Client</th>
                            <th class="text-center">Factures payées</th>
                            <th class="text-right">Chiffre d'affaires</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in topClients %}
                        <tr>
                            <td>
                                <span class="inline-flex items-center justify-center w-7 h-7 rounded-full {{ loop.index <= 3 ? 'bg-amber-100 text-amber-700 font-bold' : 'bg-gray-100 text-gray-600' }} text-xs">
                                    {{ loop.index }}
                                </span>
                            </td>
                            <td class="font-medium text-gray-900">{{ client.name }}</td>
                            <td class="text-center">{{ client.invoice_count }}</td>
                            <td class="text-right font-semibold text-gray-900">{{ client.revenue|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-gray-400 text-center py-8">Aucune donnée</p>
            {% endif %}
        </div>
    </div>

    <!-- Revenue chart placeholder -->
    {% if monthlyRevenue|length > 0 %}
    <div class="card">
        <div class="card-header">
            <h3 class="font-semibold text-gray-900">Évolution du chiffre d'affaires (12 derniers mois)</h3>
        </div>
        <div class="card-body">
            <div style="position:relative; height:300px;">
                <canvas id="revenueReportChart" style="display:block; width:100%; height:300px;"></canvas>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
{% if monthlyRevenue|length > 0 %}
<script>
(function() {
    var ctx = document.getElementById('revenueReportChart');
    if (!ctx || typeof Chart === 'undefined') return;
    
    var data = {{ monthlyRevenue|json_encode|raw }};
    var labels = data.map(function(d) {
        var parts = d.month.split('-');
        var months = ['Jan','Fév','Mar','Avr','Mai','Jun','Jul','Aoû','Sep','Oct','Nov','Déc'];
        return months[parseInt(parts[1])-1] + ' ' + parts[0].substr(2);
    });
    var values = data.map(function(d) { return parseFloat(d.total); });
    
    new Chart(ctx.getContext('2d'), {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'CA Encaissé',
                data: values,
                backgroundColor: 'rgba(16, 185, 129, 0.7)',
                borderColor: 'rgb(16, 185, 129)',
                borderWidth: 1,
                borderRadius: 6,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            resizeDelay: 200,
            animation: { duration: 400 },
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: function(ctx) { return ctx.parsed.y.toLocaleString('fr-FR') + ' {{ default_currency }}'; }
                    }
                }
            },
            scales: {
                y: { beginAtZero: true, ticks: { callback: function(v) { return v.toLocaleString('fr-FR'); } } },
                x: { grid: { display: false } }
            }
        }
    });
})();
</script>
{% endif %}
{% endblock %}
