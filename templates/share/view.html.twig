<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ document_type }} {{ document.reference }} - {{ company.companyName }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @media print {
            .no-print { display: none !important; }
            .print-only { display: block !important; }
            body { background: white; }
            .container { max-width: 100%; padding: 0; }
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Barre d'actions -->
    <div class="no-print bg-white shadow-sm border-b sticky top-0 z-10">
        <div class="max-w-4xl mx-auto px-4 py-3 flex items-center justify-between">
            <div class="flex items-center space-x-3">
                {% if company.logoPath %}
                <img src="{{ asset('uploads/logo/' ~ company.logoPath) }}" alt="{{ company.companyName }}" class="h-8 w-auto">
                {% endif %}
                <div>
                    <h1 class="font-semibold text-gray-900">{{ document_type }} {{ document.reference }}</h1>
                    <p class="text-xs text-gray-500">{{ company.companyName }}</p>
                </div>
            </div>
            <div class="flex items-center space-x-2">
                <a href="{{ path('app_share_pdf', {token: share.token}) }}" 
                   class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                    </svg>
                    Télécharger PDF
                </a>
                <button onclick="window.print()" 
                        class="inline-flex items-center px-3 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
                    </svg>
                    Imprimer
                </button>
            </div>
        </div>
    </div>

    <!-- Document -->
    <div class="max-w-4xl mx-auto px-4 py-8">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <!-- En-tête document -->
            <div class="p-8 border-b">
                <div class="flex justify-between items-start">
                    <div>
                        {% if company.logoPath %}
                        <img src="{{ asset('uploads/logo/' ~ company.logoPath) }}" alt="{{ company.companyName }}" class="h-16 w-auto mb-4">
                        {% endif %}
                        <h2 class="text-xl font-bold text-gray-900">{{ company.companyName }}</h2>
                        <p class="text-sm text-gray-600">{{ company.address }}</p>
                        <p class="text-sm text-gray-600">{{ company.city }}, {{ company.country }}</p>
                        {% if company.phone %}<p class="text-sm text-gray-600">Tél: {{ company.phone }}</p>{% endif %}
                        {% if company.email %}<p class="text-sm text-gray-600">{{ company.email }}</p>{% endif %}
                        {% if company.rccm %}<p class="text-sm text-gray-600">RCCM: {{ company.rccm }}</p>{% endif %}
                        {% if company.taxId %}<p class="text-sm text-gray-600">N° Contribuable: {{ company.taxId }}</p>{% endif %}
                    </div>
                    <div class="text-right">
                        <h1 class="text-3xl font-bold text-{{ is_proforma ? 'blue' : 'green' }}-600">{{ document_type|upper }}</h1>
                        <p class="text-2xl font-mono mt-2">{{ document.reference }}</p>
                        <p class="text-sm text-gray-600 mt-2">Date : {{ document.issueDate|date('d/m/Y') }}</p>
                        {% if is_proforma %}
                        <p class="text-sm text-gray-600">Valide jusqu'au : {{ document.validUntil|date('d/m/Y') }}</p>
                        {% else %}
                        <p class="text-sm text-gray-600">Échéance : {{ document.dueDate|date('d/m/Y') }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Client -->
            <div class="p-8 bg-gray-50 border-b">
                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-2">Client</h3>
                <p class="font-semibold text-gray-900">{{ document.client.name }}</p>
                {% if document.client.address %}<p class="text-sm text-gray-600">{{ document.client.address }}</p>{% endif %}
                {% if document.client.city %}<p class="text-sm text-gray-600">{{ document.client.city }}, {{ document.client.country }}</p>{% endif %}
                {% if document.client.phone %}<p class="text-sm text-gray-600">Tél: {{ document.client.phone }}</p>{% endif %}
                {% if document.client.email %}<p class="text-sm text-gray-600">{{ document.client.email }}</p>{% endif %}
                {% if document.client.rccm %}<p class="text-sm text-gray-600">RCCM: {{ document.client.rccm }}</p>{% endif %}
            </div>

            <!-- Objet -->
            {% if document.object %}
            <div class="p-8 border-b">
                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-2">Objet</h3>
                <p class="text-gray-900">{{ document.object }}</p>
            </div>
            {% endif %}

            <!-- Articles -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">#</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Désignation</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Qté</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase">P.U.</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Total</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for item in document.items %}
                        <tr>
                            <td class="px-6 py-4 text-sm text-gray-500">{{ loop.index }}</td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-medium text-gray-900">{{ item.designation }}</div>
                                {% if item.description %}
                                <div class="text-xs text-gray-500 mt-1">{{ item.description }}</div>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-right text-gray-900">{{ item.quantity|number_format(0, ',', ' ') }}</td>
                            <td class="px-6 py-4 text-sm text-right text-gray-900">{{ item.unitPrice|number_format(0, ',', ' ') }}</td>
                            <td class="px-6 py-4 text-sm text-right font-medium text-gray-900">{{ item.total|number_format(0, ',', ' ') }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Totaux -->
            <div class="p-8 bg-gray-50">
                <div class="flex justify-end">
                    <div class="w-64 space-y-2">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Total HT</span>
                            <span class="font-medium">{{ document.totalHT|number_format(0, ',', ' ') }} {{ company.defaultCurrency }}</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">TVA ({{ document.taxRate }}%)</span>
                            <span class="font-medium">{{ document.totalTVA|number_format(0, ',', ' ') }} {{ company.defaultCurrency }}</span>
                        </div>
                        <div class="flex justify-between text-lg font-bold border-t pt-2">
                            <span>Total TTC</span>
                            <span class="text-{{ is_proforma ? 'blue' : 'green' }}-600">{{ document.totalTTC|number_format(0, ',', ' ') }} {{ company.defaultCurrency }}</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Conditions -->
            {% if document.conditions %}
            <div class="p-8 border-t">
                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-2">Conditions</h3>
                <p class="text-sm text-gray-600 whitespace-pre-line">{{ document.conditions }}</p>
            </div>
            {% endif %}

            <!-- Notes -->
            {% if document.notes %}
            <div class="p-8 border-t bg-yellow-50">
                <h3 class="text-sm font-semibold text-gray-500 uppercase mb-2">Notes</h3>
                <p class="text-sm text-gray-600 whitespace-pre-line">{{ document.notes }}</p>
            </div>
            {% endif %}
        </div>

        <!-- Pied de page -->
        <div class="no-print mt-8 text-center text-sm text-gray-500">
            <p>Document généré par KTC-Invoice Pro</p>
            <p class="mt-1">Lien valide jusqu'au {{ share.expiresAt|date('d/m/Y à H:i') }}</p>
        </div>
    </div>
</body>
</html>
