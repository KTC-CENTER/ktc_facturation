{% extends 'base.html.twig' %}

{% block title %}Partages - {{ document.reference }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- En-tête -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Partages</h1>
            <p class="mt-1 text-sm text-gray-500">
                {{ is_proforma ? 'Proforma' : 'Facture' }} {{ document.reference }} - {{ document.client.name }}
            </p>
        </div>
        <div class="flex items-center space-x-2">
            <a href="{{ path(is_proforma ? 'app_proforma_show' : 'app_invoice_show', {id: document.id}) }}" class="btn btn-secondary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour
            </a>
            <button type="button" onclick="openShareModal()" class="btn btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
                Nouveau partage
            </button>
        </div>
    </div>

    <!-- Liste des partages -->
    <div class="card overflow-hidden">
        <table class="table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Destinataire</th>
                    <th>Statut</th>
                    <th>Accès</th>
                    <th>Expire le</th>
                    <th>Créé le</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for share in shares %}
                <tr class="{{ share.isRevoked or share.isExpired ? 'bg-gray-50 opacity-75' : '' }}">
                    <td>
                        {% if share.shareType == 'email' %}
                            <span class="inline-flex items-center text-blue-600">
                                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                Email
                            </span>
                        {% elseif share.shareType == 'whatsapp' %}
                            <span class="inline-flex items-center text-green-600">
                                <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                </svg>
                                WhatsApp
                            </span>
                        {% else %}
                            <span class="inline-flex items-center text-gray-600">
                                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                                </svg>
                                Lien
                            </span>
                        {% endif %}
                    </td>
                    <td class="text-sm">
                        {% if share.recipientEmail %}
                            {{ share.recipientEmail }}
                        {% elseif share.recipientPhone %}
                            {{ share.recipientPhone }}
                        {% else %}
                            <span class="text-gray-400">-</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if share.isRevoked %}
                            <span class="badge badge-secondary">Révoqué</span>
                        {% elseif share.isExpired %}
                            <span class="badge badge-danger">Expiré</span>
                        {% else %}
                            <span class="badge badge-success">Actif</span>
                        {% endif %}
                    </td>
                    <td class="text-sm">
                        {{ share.accessCount }} visite{{ share.accessCount > 1 ? 's' : '' }}
                        {% if share.lastAccessAt %}
                            <div class="text-xs text-gray-500">Dernier : {{ share.lastAccessAt|date('d/m H:i') }}</div>
                        {% endif %}
                    </td>
                    <td class="text-sm text-gray-500">{{ share.expiresAt|date('d/m/Y H:i') }}</td>
                    <td class="text-sm text-gray-500">{{ share.createdAt|date('d/m/Y H:i') }}</td>
                    <td class="text-right">
                        <div class="flex items-center justify-end space-x-2">
                            {% if not share.isRevoked and not share.isExpired %}
                            <button type="button" onclick="copyLink('{{ url('app_share_view', {token: share.token}) }}')" 
                                    class="text-gray-400 hover:text-gray-600" title="Copier le lien">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </button>
                            <a href="{{ url('app_share_view', {token: share.token}) }}" target="_blank"
                               class="text-blue-400 hover:text-blue-600" title="Ouvrir">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                </svg>
                            </a>
                            <form action="{{ path('app_share_revoke', {id: share.id}) }}" method="post" class="inline"
                                  onsubmit="return confirm('Révoquer ce partage ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('revoke' ~ share.id) }}">
                                <button type="submit" class="text-red-400 hover:text-red-600" title="Révoquer">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                    </svg>
                                </button>
                            </form>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7" class="text-center py-8">
                        <div class="text-gray-400">
                            <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                            </svg>
                            <p class="mt-2">Aucun partage pour ce document</p>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de partage -->
<div id="shareModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center z-50" onclick="if(event.target === this) closeModal()">
    <div class="bg-white rounded-lg shadow-xl max-w-lg w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="flex items-center justify-between p-4 border-b">
            <h3 class="text-lg font-medium text-gray-900">Partager le document</h3>
            <button type="button" onclick="closeModal()" class="text-gray-400 hover:text-gray-500">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
        <div id="shareModalContent" class="p-6">
            <!-- Contenu chargé en AJAX -->
        </div>
    </div>
</div>

{% block javascripts %}
{{ parent() }}
<script>
function openShareModal() {
    const modal = document.getElementById('shareModal');
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    
    // Charger le contenu
    fetch('{{ path('app_share_modal', {type: is_proforma ? 'proforma' : 'invoice', id: document.id}) }}')
        .then(response => response.text())
        .then(html => {
            document.getElementById('shareModalContent').innerHTML = html;
        });
}

function closeModal() {
    const modal = document.getElementById('shareModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
}

function copyLink(url) {
    navigator.clipboard.writeText(url).then(() => {
        alert('Lien copié dans le presse-papier !');
    });
}
</script>
{% endblock %}
{% endblock %}
