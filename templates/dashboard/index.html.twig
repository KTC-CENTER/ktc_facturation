{% block javascripts %}
<script>
(function() {
    if (window.__revenueChartLoaded) return;
    window.__revenueChartLoaded = true;

    var ctx = document.getElementById('revenueChart');
    if (!ctx || typeof Chart === 'undefined') return;

    var xhr = new XMLHttpRequest();
    xhr.open('GET', '{{ path('app_dashboard_revenue_stats') }}');
    xhr.onload = function() {
        if (xhr.status !== 200) {
            ctx.parentNode.innerHTML = '<div style="display:flex;align-items:center;justify-content:center;height:100%;color:#9ca3af;font-size:14px;">Graphique indisponible</div>';
            return;
        }
        try {
            var data = JSON.parse(xhr.responseText);
            new Chart(ctx.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: data.labels || [],
                    datasets: [{
                        label: 'EncaissÃ©',
                        data: data.data || [],
                        backgroundColor: 'rgba(16, 185, 129, 0.7)',
                        borderColor: 'rgba(16, 185, 129, 1)',
                        borderWidth: 1,
                        borderRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    resizeDelay: 200,
                    animation: { duration: 400 },
                    plugins: {
                        legend: { display: false },
                        tooltip: { callbacks: { label: function(c) { return new Intl.NumberFormat('fr-FR').format(c.raw) + ' FCFA'; } } }
                    },
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#f3f4f6' }, ticks: { callback: function(v) { return new Intl.NumberFormat('fr-FR', {notation:'compact'}).format(v); } } },
                        x: { grid: { display: false } }
                    }
                }
            });
        } catch(e) {
            ctx.parentNode.innerHTML = '<div style="display:flex;align-items:center;justify-content:center;height:100%;color:#9ca3af;font-size:14px;">Graphique indisponible</div>';
        }
    };
    xhr.onerror = function() {
        ctx.parentNode.innerHTML = '<div style="display:flex;align-items:center;justify-content:center;height:100%;color:#9ca3af;font-size:14px;">Graphique indisponible</div>';
    };
    xhr.send();
})();
</script>
