{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - KTC Invoice Pro{% endblock %}
{% block page_title %}Tableau de bord{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Stats cards -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Proformas -->
        <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500">Proformas</dt>
            <dd class="mt-1 flex items-baseline justify-between">
                <span class="text-3xl font-semibold tracking-tight text-gray-900">{{ stats.proformas_count }}</span>
                <span class="inline-flex items-baseline rounded-full bg-yellow-100 px-2.5 py-0.5 text-sm font-medium text-yellow-800">
                    {{ stats.proformas_pending }} en attente
                </span>
            </dd>
        </div>

        <!-- Factures -->
        <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500">Factures</dt>
            <dd class="mt-1 flex items-baseline justify-between">
                <span class="text-3xl font-semibold tracking-tight text-gray-900">{{ stats.invoices_count }}</span>
                <span class="inline-flex items-baseline rounded-full bg-red-100 px-2.5 py-0.5 text-sm font-medium text-red-800">
                    {{ stats.invoices_unpaid }} impayées
                </span>
            </dd>
        </div>

        <!-- CA Total -->
        <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500">CA Facturé</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
                {{ stats.total_invoiced|number_format(0, ',', ' ') }} FCFA
            </dd>
        </div>

        <!-- CA Encaissé -->
        <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500">CA Encaissé</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-green-600">
                {{ stats.total_paid|number_format(0, ',', ' ') }} FCFA
            </dd>
        </div>
    </div>

    <!-- Quick actions -->
    <div class="flex flex-wrap gap-3">
        <a href="{{ path('app_proforma_new') }}" class="inline-flex items-center rounded-md bg-ktc-dark px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-ktc-blue">
            <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            Nouvelle proforma
        </a>
        <a href="{{ path('app_invoice_new') }}" class="inline-flex items-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
            <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            Nouvelle facture
        </a>
        <a href="{{ path('app_client_new') }}" class="inline-flex items-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
            <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            Nouveau client
        </a>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        <!-- Chart -->
        <div class="rounded-lg bg-white p-6 shadow">
            <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Évolution du CA (6 derniers mois)</h3>
            <canvas id="revenueChart" height="200"></canvas>
        </div>

        <!-- Overdue invoices -->
        <div class="rounded-lg bg-white shadow">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
                <h3 class="text-base font-semibold leading-6 text-gray-900">Factures en retard</h3>
            </div>
            <ul role="list" class="divide-y divide-gray-200">
                {% if overdueInvoices|length > 0 %}
                    {% for invoice in overdueInvoices %}
                    <li class="px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                            <div class="truncate">
                                <p class="truncate text-sm font-medium text-ktc-dark">{{ invoice.invoiceNumber }}</p>
                                <p class="text-sm text-gray-500">{{ invoice.client.name }}</p>
                            </div>
                            <div class="ml-2 flex flex-shrink-0 flex-col items-end">
                                <p class="text-sm font-semibold text-red-600">{{ invoice.amountDue|number_format(0, ',', ' ') }} FCFA</p>
                                <p class="text-xs text-red-500">Échéance : {{ invoice.dueDate|date('d/m/Y') }}</p>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                {% else %}
                    <li class="px-4 py-8 text-center text-gray-500">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p class="mt-2">Aucune facture en retard</p>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        <!-- Recent proformas -->
        <div class="rounded-lg bg-white shadow">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
                <h3 class="text-base font-semibold leading-6 text-gray-900">Dernières proformas</h3>
                <a href="{{ path('app_proforma_index') }}" class="text-sm text-ktc-blue hover:text-ktc-dark">Voir tout →</a>
            </div>
            <ul role="list" class="divide-y divide-gray-200">
                {% for proforma in recentProformas %}
                <li>
                    <a href="{{ path('app_proforma_show', {id: proforma.id}) }}" class="block hover:bg-gray-50 px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                            <div class="truncate">
                                <p class="truncate text-sm font-medium text-ktc-dark">{{ proforma.reference }}</p>
                                <p class="text-sm text-gray-500">{{ proforma.client.name }}</p>
                            </div>
                            <div class="ml-2 flex flex-shrink-0 flex-col items-end">
                                <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                                    {% if proforma.status == 'DRAFT' %}bg-gray-100 text-gray-800
                                    {% elseif proforma.status == 'SENT' %}bg-blue-100 text-blue-800
                                    {% elseif proforma.status == 'ACCEPTED' %}bg-green-100 text-green-800
                                    {% elseif proforma.status == 'REJECTED' %}bg-red-100 text-red-800
                                    {% else %}bg-yellow-100 text-yellow-800{% endif %}">
                                    {{ proforma.statusLabel }}
                                </span>
                                <p class="mt-1 text-sm font-medium text-gray-900">{{ proforma.totalTTC|number_format(0, ',', ' ') }} FCFA</p>
                            </div>
                        </div>
                    </a>
                </li>
                {% else %}
                <li class="px-4 py-8 text-center text-gray-500">Aucune proforma récente</li>
                {% endfor %}
            </ul>
        </div>

        <!-- Recent invoices -->
        <div class="rounded-lg bg-white shadow">
            <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
                <h3 class="text-base font-semibold leading-6 text-gray-900">Dernières factures</h3>
                <a href="{{ path('app_invoice_index') }}" class="text-sm text-ktc-blue hover:text-ktc-dark">Voir tout →</a>
            </div>
            <ul role="list" class="divide-y divide-gray-200">
                {% for invoice in recentInvoices %}
                <li>
                    <a href="{{ path('app_invoice_show', {id: invoice.id}) }}" class="block hover:bg-gray-50 px-4 py-4 sm:px-6">
                        <div class="flex items-center justify-between">
                            <div class="truncate">
                                <p class="truncate text-sm font-medium text-ktc-dark">{{ invoice.invoiceNumber }}</p>
                                <p class="text-sm text-gray-500">{{ invoice.client.name }}</p>
                            </div>
                            <div class="ml-2 flex flex-shrink-0 flex-col items-end">
                                <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                                    {% if invoice.status == 'DRAFT' %}bg-gray-100 text-gray-800
                                    {% elseif invoice.status == 'ISSUED' %}bg-blue-100 text-blue-800
                                    {% elseif invoice.status == 'PARTIAL' %}bg-yellow-100 text-yellow-800
                                    {% elseif invoice.status == 'PAID' %}bg-green-100 text-green-800
                                    {% else %}bg-red-100 text-red-800{% endif %}">
                                    {{ invoice.statusLabel }}
                                </span>
                                <p class="mt-1 text-sm font-medium text-gray-900">{{ invoice.totalTTC|number_format(0, ',', ' ') }} FCFA</p>
                            </div>
                        </div>
                    </a>
                </li>
                {% else %}
                <li class="px-4 py-8 text-center text-gray-500">Aucune facture récente</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const chartData = {{ chartData|json_encode|raw }};
    
    const ctx = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: chartData.map(d => d.month),
            datasets: [
                {
                    label: 'Facturé',
                    data: chartData.map(d => d.invoiced),
                    backgroundColor: 'rgba(30, 58, 95, 0.8)',
                    borderColor: 'rgba(30, 58, 95, 1)',
                    borderWidth: 1
                },
                {
                    label: 'Encaissé',
                    data: chartData.map(d => d.paid),
                    backgroundColor: 'rgba(46, 134, 171, 0.8)',
                    borderColor: 'rgba(46, 134, 171, 1)',
                    borderWidth: 1
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return new Intl.NumberFormat('fr-FR').format(value) + ' FCFA';
                        }
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.dataset.label + ': ' + new Intl.NumberFormat('fr-FR').format(context.raw) + ' FCFA';
                        }
                    }
                }
            }
        }
    });
});
</script>
{% endblock %}
