{% extends 'base.html.twig' %}

{% block title %}Factures{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Factures</h1>
            <p class="text-sm text-gray-500">Gérez vos factures clients</p>
        </div>
        <a href="{{ path('app_invoice_new') }}" class="btn btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nouvelle facture
        </a>
    </div>

    <!-- Statistiques rapides -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="card bg-blue-50 border-blue-200">
            <div class="card-body">
                <div class="text-sm text-blue-600">En attente</div>
                <div class="text-2xl font-bold text-blue-700">{{ stats.sent|default(0) }}</div>
            </div>
        </div>
        <div class="card bg-yellow-50 border-yellow-200">
            <div class="card-body">
                <div class="text-sm text-yellow-600">Partiellement payées</div>
                <div class="text-2xl font-bold text-yellow-700">{{ stats.partial|default(0) }}</div>
            </div>
        </div>
        <div class="card bg-red-50 border-red-200">
            <div class="card-body">
                <div class="text-sm text-red-600">En retard</div>
                <div class="text-2xl font-bold text-red-700">{{ stats.overdue|default(0) }}</div>
            </div>
        </div>
        <div class="card bg-green-50 border-green-200">
            <div class="card-body">
                <div class="text-sm text-green-600">Payées</div>
                <div class="text-2xl font-bold text-green-700">{{ stats.paid|default(0) }}</div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card">
        <div class="card-body">
            <form method="GET" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
                <div>
                    <input type="text" name="search" value="{{ app.request.query.get('search') }}" 
                           placeholder="Rechercher..." class="form-input">
                </div>
                <div>
                    <select name="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        {% for value, label in statuses %}
                            <option value="{{ value }}" {{ app.request.query.get('status') == value ? 'selected' }}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <select name="client" class="form-select">
                        <option value="">Tous les clients</option>
                        {% for client in clients %}
                            <option value="{{ client.id }}" {{ app.request.query.get('client') == client.id ? 'selected' }}>{{ client.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <input type="date" name="date_from" value="{{ app.request.query.get('date_from') }}" 
                           class="form-input" placeholder="Date début">
                </div>
                <div class="flex gap-2">
                    <input type="date" name="date_to" value="{{ app.request.query.get('date_to') }}" 
                           class="form-input" placeholder="Date fin">
                    <button type="submit" class="btn btn-secondary">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Client</th>
                        <th>Objet</th>
                        <th class="text-right">Montant TTC</th>
                        <th class="text-right">Payé</th>
                        <th>Échéance</th>
                        <th>Statut</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for invoice in invoices %}
                    <tr>
                        <td>
                            <a href="{{ path('app_invoice_show', {id: invoice.id}) }}" class="font-medium text-primary-600 hover:text-primary-700">
                                {{ invoice.reference }}
                            </a>
                            {% if invoice.proforma %}
                                <span class="ml-2 text-xs text-gray-500">
                                    ← <a href="{{ path('app_proforma_show', {id: invoice.proforma.id}) }}" class="text-primary-600">{{ invoice.proforma.reference }}</a>
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_client_show', {id: invoice.client.id}) }}" class="text-gray-900 hover:text-primary-600">
                                {{ invoice.client.name }}
                            </a>
                        </td>
                        <td class="max-w-xs truncate">{{ invoice.object ?: '-' }}</td>
                        <td class="text-right font-medium">{{ invoice.totalTTC|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                        <td class="text-right">
                            {% if invoice.amountPaid > 0 %}
                                <span class="{{ invoice.amountPaid >= invoice.totalTTC ? 'text-success-600' : 'text-warning-600' }}">
                                    {{ invoice.amountPaid|number_format(0, ',', ' ') }} {{ default_currency }}
                                </span>
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            {% if invoice.isOverdue %}
                                <span class="text-danger-600">{{ invoice.dueDate|date('d/m/Y') }}</span>
                                <span class="text-xs text-danger-500">({{ invoice.daysOverdue }}j)</span>
                            {% else %}
                                {{ invoice.dueDate|date('d/m/Y') }}
                            {% endif %}
                        </td>
                        <td>
                            <span class="badge badge-{{ invoice.statusColor }}">
                                {{ invoice.statusLabel }}
                            </span>
                        </td>
                        <td class="text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="{{ path('app_invoice_show', {id: invoice.id}) }}" class="text-gray-400 hover:text-gray-600" title="Voir">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                </a>
                                <a href="{{ path('app_invoice_download_pdf', {id: invoice.id}) }}" class="text-gray-400 hover:text-gray-600" title="Télécharger PDF">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                </a>
                                {% if invoice.canBePaid %}
                                <a href="{{ path('app_invoice_record_payment', {id: invoice.id}) }}" class="text-success-600 hover:text-success-700" title="Enregistrer un paiement">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                                    </svg>
                                </a>
                                {% endif %}
                                {% if invoice.canBeEdited %}
                                <a href="{{ path('app_invoice_edit', {id: invoice.id}) }}" class="text-gray-400 hover:text-gray-600" title="Modifier">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-8 text-gray-500">
                            Aucune facture trouvée
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {% if invoices.haveToPaginate %}
        <div class="card-footer">
            <div class="pagination">
                {{ knp_pagination_render(invoices) }}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
