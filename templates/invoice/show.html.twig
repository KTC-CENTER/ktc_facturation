{% extends 'base.html.twig' %}

{% block title %}{{ invoice.reference }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <nav class="text-sm text-gray-500 mb-2">
                <a href="{{ path('app_invoice_index') }}" class="hover:text-primary-600">Factures</a>
                <span class="mx-2">/</span>
                <span class="text-gray-700">{{ invoice.reference }}</span>
            </nav>
            <h1 class="text-2xl font-bold text-gray-900">{{ invoice.reference }}</h1>
        </div>
        <div class="flex flex-wrap items-center gap-2">
            <a href="{{ path('app_invoice_preview', {id: invoice.id}) }}" target="_blank" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                Aperçu
            </a>
            <a href="{{ path('app_invoice_pdf', {id: invoice.id}) }}" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                PDF
            </a>
            <!-- Bouton Envoyer (Email/WhatsApp) -->
            <div class="relative" x-data="{ open: false }">
                <button @click="open = !open" class="btn btn-success">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                    </svg>
                    Envoyer
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                </button>
                <div x-show="open" @click.away="open = false" x-cloak class="absolute right-0 mt-1 w-56 bg-white border rounded-lg shadow-lg z-20 py-1">
                    {% if invoice.client.email %}
                    <a href="{{ path('app_invoice_send_email', {id: invoice.id}) }}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Envoyer par Email
                    </a>
                    {% else %}
                    <span class="flex items-center px-4 py-2 text-sm text-gray-400">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                        Email (pas d'adresse)
                    </span>
                    {% endif %}
                    {% if invoice.client.phone %}
                    <a href="{{ path('app_invoice_send_whatsapp', {id: invoice.id}) }}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                        <svg class="w-5 h-5 mr-3 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        Envoyer par WhatsApp
                    </a>
                    {% else %}
                    <span class="flex items-center px-4 py-2 text-sm text-gray-400">
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        WhatsApp (pas de tél)
                    </span>
                    {% endif %}
                </div>
            </div>
            {% if invoice.canBeEdited %}
            <a href="{{ path('app_invoice_edit', {id: invoice.id}) }}" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Contenu principal -->
        <div class="lg:col-span-2 space-y-6">
            <!-- En-tête document -->
            <div class="card">
                <div class="card-body">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 mb-2">Client</h3>
                            <p class="font-semibold text-gray-900">{{ invoice.client.name }}</p>
                            {% if invoice.client.address %}
                                <p class="text-sm text-gray-600">{{ invoice.client.address }}</p>
                            {% endif %}
                            {% if invoice.client.city %}
                                <p class="text-sm text-gray-600">{{ invoice.client.city }}{% if invoice.client.country %}, {{ invoice.client.country }}{% endif %}</p>
                            {% endif %}
                            {% if invoice.client.phone %}
                                <p class="text-sm text-gray-600">{{ invoice.client.phone }}</p>
                            {% endif %}
                            {% if invoice.client.email %}
                                <p class="text-sm text-gray-600">{{ invoice.client.email }}</p>
                            {% endif %}
                        </div>
                        <div class="text-right">
                            <span class="badge badge-{{ invoice.statusColor }} badge-lg">
                                {{ invoice.statusLabel }}
                            </span>
                            {% if invoice.isOverdue %}
                                <p class="text-sm text-danger-600 mt-2">En retard de {{ invoice.daysOverdue }} jours</p>
                            {% endif %}
                        </div>
                    </div>
                    
                    {% if invoice.object %}
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Objet</h3>
                        <p class="text-gray-900">{{ invoice.object }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Lignes -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Détail des lignes</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Désignation</th>
                                <th class="text-right">Qté</th>
                                <th class="text-right">Prix unit.</th>
                                <th class="text-right">Remise</th>
                                <th class="text-right">Total HT</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in invoice.items %}
                            <tr>
                                <td>
                                    <div class="font-medium text-gray-900">{{ item.designation }}</div>
                                    {% if item.description %}
                                        <div class="text-sm text-gray-500">{{ item.description }}</div>
                                    {% endif %}
                                </td>
                                <td class="text-right">{{ item.quantityFloat|number_format(0, ',', ' ') }}</td>
                                <td class="text-right">{{ item.unitPriceFloat|number_format(0, ',', ' ') }}</td>
                                <td class="text-right">{% if item.discountFloat > 0 %}{{ item.discountFloat }}%{% else %}-{% endif %}</td>
                                <td class="text-right font-medium">{{ item.totalFloat|number_format(0, ',', ' ') }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Notes -->
            {% if invoice.notes %}
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Notes</h3>
                </div>
                <div class="card-body">
                    <p class="text-gray-700 whitespace-pre-line">{{ invoice.notes }}</p>
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Informations -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Informations</h3>
                </div>
                <div class="card-body space-y-4">
                    <div class="flex justify-between">
                        <span class="text-gray-500">Date d'émission</span>
                        <span class="font-medium">{{ invoice.issueDate|date('d/m/Y') }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-500">Date d'échéance</span>
                        <span class="font-medium">{{ invoice.dueDate|date('d/m/Y') }}</span>
                    </div>
                    {% if invoice.proforma %}
                    <div class="flex justify-between">
                        <span class="text-gray-500">Proforma liée</span>
                        <a href="{{ path('app_proforma_show', {id: invoice.proforma.id}) }}" class="text-primary-600 hover:underline">
                            {{ invoice.proforma.reference }}
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Totaux -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Montants</h3>
                </div>
                <div class="card-body space-y-3">
                    <div class="flex justify-between">
                        <span class="text-gray-500">Total HT</span>
                        <span>{{ invoice.totalHTFloat|number_format(0, ',', ' ') }} {{ default_currency }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-500">TVA ({{ invoice.taxRateFloat }}%)</span>
                        <span>{{ invoice.totalTaxFloat|number_format(0, ',', ' ') }} {{ default_currency }}</span>
                    </div>
                    <div class="flex justify-between pt-3 border-t border-gray-200">
                        <span class="font-semibold text-gray-900">Total TTC</span>
                        <span class="font-bold text-lg text-primary-600">{{ invoice.totalTTCFloat|number_format(0, ',', ' ') }} {{ default_currency }}</span>
                    </div>
                    {% if invoice.amountPaidFloat > 0 %}
                    <div class="flex justify-between text-green-600">
                        <span>Payé</span>
                        <span>{{ invoice.amountPaidFloat|number_format(0, ',', ' ') }} {{ default_currency }}</span>
                    </div>
                    {% endif %}
                    {% if invoice.remainingAmountFloat > 0 %}
                    <div class="flex justify-between text-red-600 font-semibold">
                        <span>Reste à payer</span>
                        <span>{{ invoice.remainingAmountFloat|number_format(0, ',', ' ') }} {{ default_currency }}</span>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Actions</h3>
                </div>
                <div class="card-body space-y-2">
                    {% if invoice.status != 'PAID' %}
                    <a href="{{ path('app_invoice_payment', {id: invoice.id}) }}" class="btn btn-success w-full">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z"/>
                        </svg>
                        Enregistrer paiement
                    </a>
                    {% endif %}
                    <form method="post" action="{{ path('app_invoice_duplicate', {id: invoice.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ invoice.id) }}">
                        <button type="submit" class="btn btn-secondary w-full">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                            </svg>
                            Dupliquer
                        </button>
                    </form>
                    {% if invoice.canBeCancelled %}
                    <form method="post" action="{{ path('app_invoice_cancel', {id: invoice.id}) }}" onsubmit="return confirm('Annuler cette facture ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ invoice.id) }}">
                        <button type="submit" class="btn btn-warning w-full">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                            </svg>
                            Annuler
                        </button>
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function closeModal() {
    document.getElementById('share-modal')?.classList.add('hidden');
}
</script>
{% endblock %}
