{% extends 'base.html.twig' %}

{% block title %}{{ invoice.reference }}{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <nav class="text-sm text-gray-500 mb-2">
                <a href="{{ path('app_invoice_index') }}" class="hover:text-primary-600">Factures</a>
                <span class="mx-2">/</span>
                <span class="text-gray-700">{{ invoice.reference }}</span>
            </nav>
            <h1 class="text-2xl font-bold text-gray-900">{{ invoice.reference }}</h1>
        </div>
        <div class="flex flex-wrap items-center gap-2">
            <a href="{{ path('app_invoice_preview', {id: invoice.id}) }}" target="_blank" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                Aperçu
            </a>
            <a href="{{ path('app_invoice_pdf', {id: invoice.id}) }}" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Télécharger PDF
            </a>
            <button type="button" class="btn btn-secondary" onclick="openShareModal()">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
                Partager
            </button>
            {% if invoice.canBeEdited %}
            <a href="{{ path('app_invoice_edit', {id: invoice.id}) }}" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Contenu principal -->
        <div class="lg:col-span-2 space-y-6">
            <!-- En-tête document -->
            <div class="card">
                <div class="card-body">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div>
                            <h3 class="text-sm font-medium text-gray-500 mb-2">Client</h3>
                            <p class="font-semibold text-gray-900">{{ invoice.client.name }}</p>
                            {% if invoice.client.address %}
                                <p class="text-sm text-gray-600">{{ invoice.client.address }}</p>
                            {% endif %}
                            {% if invoice.client.city %}
                                <p class="text-sm text-gray-600">{{ invoice.client.city }}, {{ invoice.client.country }}</p>
                            {% endif %}
                            {% if invoice.client.email %}
                                <p class="text-sm text-gray-600">{{ invoice.client.email }}</p>
                            {% endif %}
                        </div>
                        <div class="text-right">
                            <span class="badge badge-{{ invoice.statusColor }} badge-lg">
                                {{ invoice.statusLabel }}
                            </span>
                            {% if invoice.isOverdue %}
                                <p class="text-sm text-danger-600 mt-2">En retard de {{ invoice.daysOverdue }} jours</p>
                            {% endif %}
                        </div>
                    </div>
                    
                    {% if invoice.object %}
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Objet</h3>
                        <p class="text-gray-900">{{ invoice.object }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Lignes -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Détail des lignes</h3>
                </div>
                <div class="overflow-x-auto">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Désignation</th>
                                <th class="text-right">Qté</th>
                                <th class="text-right">Prix unit.</th>
                                <th class="text-right">Remise</th>
                                <th class="text-right">Total HT</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in invoice.items %}
                            <tr>
                                <td>
                                    <div class="font-medium text-gray-900">{{ item.designation }}</div>
                                    {% if item.description %}
                                        <div class="text-sm text-gray-500">{{ item.description|nl2br }}</div>
                                    {% endif %}
                                    {% if item.product %}
                                        <span class="text-xs text-gray-400">[{{ item.product.code }}]</span>
                                    {% endif %}
                                </td>
                                <td class="text-right">{{ item.quantityFloat|number_format(2, ',', ' ') }}</td>
                                <td class="text-right">{{ item.unitPriceFloat|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                                <td class="text-right">{{ item.discountFloat > 0 ? item.discountFloat ~ '%' : '-' }}</td>
                                <td class="text-right font-medium">{{ item.total|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="4" class="text-right font-medium">Total HT</td>
                                <td class="text-right font-medium">{{ invoice.totalHT|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-right font-medium">TVA ({{ invoice.taxRateFloat }}%)</td>
                                <td class="text-right font-medium">{{ invoice.totalTVA|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            <tr class="text-lg">
                                <td colspan="4" class="text-right font-bold">Total TTC</td>
                                <td class="text-right font-bold text-primary-600">{{ invoice.totalTTC|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            {% if invoice.amountPaid > 0 %}
                            <tr>
                                <td colspan="4" class="text-right font-medium text-success-600">Montant payé</td>
                                <td class="text-right font-medium text-success-600">{{ invoice.amountPaid|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            <tr class="text-lg">
                                <td colspan="4" class="text-right font-bold">Reste à payer</td>
                                <td class="text-right font-bold text-danger-600">{{ invoice.remainingAmount|number_format(0, ',', ' ') }} {{ default_currency }}</td>
                            </tr>
                            {% endif %}
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Notes et conditions -->
            {% if invoice.notes or invoice.conditions %}
            <div class="card">
                <div class="card-body space-y-4">
                    {% if invoice.notes %}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Notes</h3>
                        <p class="text-sm text-gray-900">{{ invoice.notes|nl2br }}</p>
                    </div>
                    {% endif %}
                    {% if invoice.conditions %}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 mb-1">Conditions</h3>
                        <p class="text-sm text-gray-900">{{ invoice.conditions|nl2br }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Informations -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Informations</h3>
                </div>
                <div class="card-body space-y-3">
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Date d'émission</span>
                        <span class="text-sm font-medium">{{ invoice.issueDate|date('d/m/Y') }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Échéance</span>
                        <span class="text-sm font-medium {{ invoice.isOverdue ? 'text-danger-600' : '' }}">
                            {{ invoice.dueDate|date('d/m/Y') }}
                        </span>
                    </div>
                    {% if invoice.paidAt %}
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Date de paiement</span>
                        <span class="text-sm font-medium text-success-600">{{ invoice.paidAt|date('d/m/Y') }}</span>
                    </div>
                    {% endif %}
                    {% if invoice.paymentMethod %}
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Mode de paiement</span>
                        <span class="text-sm font-medium">{{ invoice.paymentMethod }}</span>
                    </div>
                    {% endif %}
                    {% if invoice.paymentReference %}
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Référence paiement</span>
                        <span class="text-sm font-medium">{{ invoice.paymentReference }}</span>
                    </div>
                    {% endif %}
                    <div class="flex justify-between">
                        <span class="text-sm text-gray-500">Créée par</span>
                        <span class="text-sm font-medium">{{ invoice.createdBy.fullName }}</span>
                    </div>
                </div>
            </div>

            <!-- Proforma liée -->
            {% if invoice.proforma %}
            <div class="card border-blue-200 bg-blue-50">
                <div class="card-header">
                    <h3 class="font-semibold text-blue-800">Proforma d'origine</h3>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_proforma_show', {id: invoice.proforma.id}) }}" class="text-blue-700 hover:text-blue-800 font-medium">
                        {{ invoice.proforma.reference }}
                    </a>
                </div>
            </div>
            {% endif %}

            <!-- Changer le statut -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Changer le statut</h3>
                </div>
                <div class="card-body space-y-2">
                    {% for status, label in statuses %}
                        {% if status != invoice.status %}
                        <form action="{{ path('app_invoice_status', {id: invoice.id, status: status}) }}" method="POST">
                            <input type="hidden" name="_token" value="{{ csrf_token('status' ~ invoice.id) }}">
                            <button type="submit" class="btn btn-secondary w-full text-sm">
                                {{ label }}
                            </button>
                        </form>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h3 class="font-semibold text-gray-900">Actions</h3>
                </div>
                <div class="card-body space-y-2">
                    {% if invoice.canBePaid %}
                    <a href="{{ path('app_invoice_payment', {id: invoice.id}) }}" class="btn btn-success w-full">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                        Enregistrer un paiement
                    </a>
                    {% endif %}
                    
                    <a href="{{ path('app_invoice_duplicate', {id: invoice.id}) }}" class="btn btn-secondary w-full">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                        </svg>
                        Dupliquer
                    </a>
                    
                    {% if invoice.status != 'CANCELLED' and invoice.status != 'PAID' %}
                    <form action="{{ path('app_invoice_cancel', {id: invoice.id}) }}" method="POST">
                        <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ invoice.id) }}">
                        <button type="submit" class="btn btn-warning w-full" onclick="return confirm('Êtes-vous sûr de vouloir annuler cette facture ?')">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                            </svg>
                            Annuler la facture
                        </button>
                    </form>
                    {% endif %}
                    
                    {% if invoice.status == 'DRAFT' %}
                    <button type="button" class="btn btn-danger w-full" 
                            onclick="if(confirm('Êtes-vous sûr de vouloir supprimer cette facture ?')) document.getElementById('delete-form').submit()">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Supprimer
                    </button>
                    <form id="delete-form" action="{{ path('app_invoice_delete', {id: invoice.id}) }}" method="POST" class="hidden">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de partage -->
<div id="share-modal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-black opacity-50" onclick="document.getElementById('share-modal').classList.add('hidden')"></div>
        <div class="relative bg-white rounded-lg shadow-xl max-w-md w-full p-6">
            <h3 class="text-lg font-semibold mb-4">Partager la facture</h3>
            <div id="share-modal-content"></div>
        </div>
    </div>
</div>

<script>
function openShareModal() {
    fetch('{{ path('app_share_modal', {type: 'invoice', id: invoice.id}) }}')
        .then(response => response.text())
        .then(html => {
            document.getElementById('share-modal-content').innerHTML = html;
            document.getElementById('share-modal').classList.remove('hidden');
        });
}
</script>
{% endblock %}
